- meta_tags_for(@category)

#category-banner-wrap
  = render partial: 'category_banner'

#store-wrap
  .store-sections
    #categories-wrap
      .categories.hidden-print
        %ul= render @categories

    #search-panel-wrap
      .search-panel{style: 'display: none'}

    #products-wrap
      .products
        .page-header.visible-print
          %h1
            = current_store.to_s
            %small= @category.to_s
        .product-grid.collapse.in
          %ul{class: current_store.masonry? ? 'masonry-grid' : ''}
            = render @products
        .product-list.collapse
          .panel.panel-default
            = render partial: 'products/table', object: @products, as: :products

    #product-detail-wrap
      .product-detail{style: 'display: none'}

:coffee
  jQuery ->
    if $(window).isSmall()
      $(window).scrollTo $('.products'), 300, offset: -70
