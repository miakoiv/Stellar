- if can_shop? && may_shop_at?(@category) && !product.master?

  - if product.available == 0
    - if product.available?
      %p.text-info
        = icon('exclamation-circle')
        = col(Product, :lead_time)
        = product.lead_time
        = col(Product, :lead_time_unit)
    - else
      %p.text-danger
        = icon('exclamation-circle')
        = col(Product, :out_of_stock)

  - if product.available?
    = form_tag order_product_path(product), class: 'order-form', method: :post, remote: true do
      .form-group
        = hidden_field_tag :amount, 1
        %button.btn.btn-default{type: 'submit'}
          = icon('cart-plus', t('store.add_to_cart'))
