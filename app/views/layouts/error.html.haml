!!!
%html
  %head
    = render partial: 'shared/metadata'
    = render partial: 'favicon'
  %body{class: current_theme}
    %nav#main-nav.navbar.navbar-default.navbar-fixed-top{role: 'navigation'}
      .content
        .navbar-header
          = link_to branding(current_store.presence || current_portal.presence), root_path, class: 'navbar-brand'

    #static-wrap
      = yield

    %footer.footer
      = render partial: 'shared/footer'
