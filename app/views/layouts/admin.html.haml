!!!
%html
  %head
    = render partial: 'shared/metadata'
    = render partial: 'favicon'
  %body
    %nav#offcanvas.offcanvas.navmenu.navmenu-inverse.navmenu-fixed-left{role: 'navigation'}
      = render partial: 'admin/shared/offcanvas'
    %nav.navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
      .container
        %button.sidebar-toggle{type: 'button', data: {toggle: 'offcanvas', target: '#offcanvas', canvas: 'body'}}
          = icon('bars', class: 'fa-lg')
        .navbar-header
          = link_to branding(current_store), root_path, class: 'navbar-brand'
        %ul.nav.navbar-nav.responsive
          %li.dropdown
            %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
              = menu_title 'tachometer', t('admin.dashboard.title')
              %span.caret
            %ul.dropdown-menu
              = render partial: 'admin/shared/dashboard_menu'
          %li.dropdown
            %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
              = menu_title 'cube', t('admin.content.title')
              %span.caret
            %ul.dropdown-menu
              = render partial: 'admin/shared/content_menu'
          %li.dropdown
            %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
              = menu_title 'cog', t('admin.configuration.title')
              %span.caret
            %ul.dropdown-menu
              = render partial: 'admin/shared/configuration_menu'
          %li.dropdown
            %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
              = menu_title 'globe', t('admin.global.title')
              %span.caret
            %ul.dropdown-menu
              = render partial: 'admin/shared/global_menu'
        %ul.nav.navbar-nav.navbar-right.responsive
          - if user_signed_in? && !current_user.guest?
            %li.dropdown
              %a.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}}
                %span.label{class: "label-#{current_user.appearance}"}= icon('user')
                = current_user.name.split.first
                %span.caret
              %ul.dropdown-menu.dropdown-menu-right{role: 'menu'}
                = render partial: 'admin/shared/user_menu'
          - else
            %li= link_to icon('sign-in', class: 'fa-lg'), new_user_session_path
          %li= link_to icon('home', class: 'fa-lg'), front_path, title: t('admin.return_to_storefront'), data: {toggle: 'tooltip', placement: 'bottom'}

    .container
      = yield
