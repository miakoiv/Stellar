!!!
%html
  %head
    = render partial: 'shared/metadata'
    %title Spry
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{type: 'button', data: {toggle: 'collapse', target: '#navbar'}, aria: {expanded: 'false', controls: 'navbar'}}
            %span.sr-only Toggle navigation
            = icon('bars')
          = link_to name_with_icon(current_brand), root_path, class: 'navbar-brand',
              data: {toggle: 'popover', placement: 'bottom', content: 'View storefront'}
        #navbar.collapse.navbar-collapse
          = render partial: 'shared/user_menu'
          = render partial: 'shared/admin_nav'

    .container
      = render partial: 'shared/flash'
      = yield
