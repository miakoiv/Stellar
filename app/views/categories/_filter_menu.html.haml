- if category.descendants.any?
  %li
    .title
      = title(Category)
      - if selected
        %span.badge= selected.size

    .btn-group-vertical{data: {toggle: 'buttons'}}
      - category.descendants.each do |descendant|
        - active = selected.present? && selected.include?(descendant.id.to_s)
        %label.btn.btn-default.btn-xs{class: active && 'active'}
          = check_box_tag "product_search[categories][]", descendant.id, active, id: nil
          = descendant
