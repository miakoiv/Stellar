%p= t('checkout.select_shipping_method')
.list-group
  - @shipping_methods.each do |method|
    = link_to shipping_method_path(@order, method), remote: true, id: dom_id(method), class: 'list-group-item' do
      .media
        .media-left
          = image_variant_tag method.cover_image, :thumbnail, class: 'media-object'
        .media-body
          %h4.media-heading= method.name
          - if method.shipping_gateway_class.fixed_cost? && method.shipping_cost_product.present?
            .pull-right.label.label-primary
              = icon('plus')
              = price_tag *pricing.for_display(method.shipping_cost_product)
          - if method.delivery_time.present?
            = t('checkout.delivery_time', days: method.delivery_time)
.description
.details
.gateway-content
