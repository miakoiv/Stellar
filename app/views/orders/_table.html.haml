.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th.col-min
        %th.col-xs-1= col(Order, :completed_at)
        - if current_user.can_see_group_orders?
          %th= col(Order, :user_id)
        - if current_store.b2b_sales?
          %th= col(Order, :summary)
        %th= col(Order, :shipping_at)
        %th.col-xs-1.text-right= col(Order, :items)
        %th.text-right= col(Order, :grand_total)
        %th.actions

    %tbody
      - orders.each do |order|
        = content_tag_for :tr, order, class: order.appearance do
          %td= icon(order.icon)
          %td= l(order.completed_at.to_date)
          - if current_user.can_see_group_orders?
            %td= order.user.name
          - if current_store.b2b_sales?
            %td= order.summary
          %td= order.shipping_at.present? ? l(order.shipping_at) : ''
          %td.text-right= order.order_items.count
          %td.text-right.currency= humanized_money_with_symbol order.grand_total
          %td.actions
            = link_to icon('info', t('actions.show')), order_path(order), class: 'btn btn-default btn-sm'
            - if current_user.can_update?(order)
              = link_to icon('edit', t('actions.edit')), edit_order_path(order),
                  class: 'btn btn-default btn-sm'
            - if current_user.can_delete?(order)
              = link_to icon('remove', t('actions.delete')), order_path(order), method: :delete, class: 'btn btn-sm btn-danger'
