%meta{charset: 'utf-8'}
%meta{content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}
%meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
= display_meta_tags site: current_store.name

= stylesheet_link_tag 'application', media: 'all'
= stylesheet_link_tag "spry_themes/#{current_store.theme}", media: 'all'
= javascript_include_tag 'application'
= javascript_include_tag "spry_themes/#{current_store.theme}"

= csrf_meta_tags

- if current_store.tawkto_site_id.present?
  :javascript
    var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
    (function(){
    var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
    s1.async=true;
    s1.src='https://embed.tawk.to/#{current_store.tawkto_site_id}/default';
    s1.charset='UTF-8';
    s1.setAttribute('crossorigin','*');
    s0.parentNode.insertBefore(s1,s0);
    })();

- if current_store.tracking_code.present?
  :javascript
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '#{current_store.tracking_code}', 'auto');
    ga('send', 'pageview');
