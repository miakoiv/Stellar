= bootstrap_form_for [:admin, @category], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.text_field :name, required: true
        = f.text_area :subtitle, rows: 3
        = f.select :product_scope, Product.sorting_scopes.map { |s| [Product.human_attribute_value(:sorting, s), s] }, {}, {class: 'selectize'}
        = f.form_group do
          = f.check_box :live
      - unless locked
        %fieldset.actions
          = f.form_group do
            = f.primary
