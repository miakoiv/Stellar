#add-categories
  = bootstrap_form_for promotion,
      url: add_categories_admin_promotion_path(promotion),
      remote: true, method: :post do |f|
    = f.text_field :category_ids_string
    = f.submit t('.submit')

    :coffee
      options = #{promotion.available_categories.map { |c|
        {id: c.id, name: c.to_option}
      }.to_json}

      $('#promotion_category_ids_string').selectize
        options: options
        maxItems: null
        valueField: 'id'
        sortField: [{field: 'name'}]
        searchField: ['name']
        diacritics: false
        render:
          item: (item, escape) ->
            '<div>' + escape(item.name) + '</div>'
          option: (item, escape) ->
            '<div>' + escape(item.name) + '</div>'
