$('#layout-modal').remove();
$("#{j render partial: 'admin/segments/modal'}}").appendTo('body');
$("#{j render partial: 'admin/segments/settings', object: @segment, as: :segment}}").appendTo($('#layout-modal .modal-body'));
var $dialog = $('#layout-modal .modal-dialog');
$dialog.initialize();
$dialog.css({top: '30%', left: '50%'});
$('#layout-modal').modal({backdrop: false});
$dialog.draggable({handle: '.modal-header'});
$('.section, .column, .segment').removeClass('active');
$('##{dom_id(@segment)}').addClass('active');
