- content_for :segment_content do
  = render partial: @segment.to_partial_path, object: @segment

%hr
%fieldset
  = f.text_area :body, rows: 10, skip_label: true

:coffee
  $content = $('#segment_body')[0]
  cm = CodeMirror.fromTextArea $content,
    mode: 'text/html'
    lineWrapping: true
    autoRefresh: true
