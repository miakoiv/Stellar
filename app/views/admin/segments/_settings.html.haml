= bootstrap_form_for [:admin, segment], namespace: [:segment, segment.id], remote: true, layout: :vertical, html: {class: 'immediate triggered'} do |f|
  %fieldset
    = f.select :shape, Segment.shape_options, {include_blank: t('.fluid_ratio')}, {placeholder: t('.fluid_ratio')}
    = f.form_group do
      = f.check_box :jumbotron
    = f.text_field :background_color
    .form-group
      = f.label col(Segment, :alignment)
      .btn-group.btn-group-justified{data: {toggle: 'buttons'}}
        - Segment.alignment_options.each do |title, alignment|
          %label.btn.btn-default{class: segment.alignment == alignment && 'active'}
            = f.radio_button_without_bootstrap :alignment, alignment
            = title
    .form-group
      = f.label col(Segment, :inset)
      .btn-group.btn-group-justified{data: {toggle: 'buttons'}}
        - Segment.inset_options.each do |title, inset|
          %label.btn.btn-default{class: segment.inset == inset && 'active'}
            = f.radio_button_without_bootstrap :inset, inset
            = title

:coffee
  $('#segment_#{segment.id}_segment_shape').selectize
      allowEmptyOption: true
