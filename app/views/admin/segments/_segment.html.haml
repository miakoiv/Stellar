.segment[segment]{class: [segment.template, segment.stretch? && 'stretch', segment.fixed_ratio? && 'fixed-ratio'], style: segment.style(:margins)}
  .segment-shape{class: [segment.shape, segment.shadow, segment.animation_class], data: {'av-animation': segment.animation}}
    = render partial: 'segments/background', object: segment, as: :segment
    = render partial: 'admin/segments/content', object: segment, as: :segment
  = render partial: 'admin/segments/segment_nav', object: segment, as: :segment
