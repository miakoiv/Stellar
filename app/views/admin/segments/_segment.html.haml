.segment[segment]{class: segment.template, style: segment.style(:margins)}
  .segment-shape{class: [segment.shape, segment.fixed_ratio? && 'fixed-ratio', segment.shadow, segment.animation_class], data: {'av-animation': segment.animation}}
    .segment-bg-container{style: segment.style(:backgroundImage)}
    = render partial: 'admin/segments/content', object: segment, as: :segment
  = render partial: 'admin/segments/segment_nav', object: segment, as: :segment
