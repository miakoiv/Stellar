.page-header
  = link_to new_admin_brand_path, class: 'btn btn-primary' do
    = icon(:plus, 'New Brand')
  %h1 Brands

.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th.col-xs-1
        %th Name
        %th Matfox customer
        %th.col-md-1.col.xs-2
        %th.col-md-1.col.xs-2

    %tbody
      - @brands.each do |brand|
        %tr
          %td= icon_image(brand)
          %td= brand.name
          %td= brand.matfox_customer
          %td.text-right= link_to icon('info', 'Show'), admin_brand_path(brand),
            class: 'btn btn-default btn-sm'
          %td.text-right= link_to icon('edit', 'Edit'), edit_admin_brand_path(brand),
            class: 'btn btn-default btn-sm'
