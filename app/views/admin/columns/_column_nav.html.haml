%nav.column-nav.navbar.navbar-inverse
  %ul.nav.navbar-nav.navbar-left
    %li
      = link_to settings_admin_column_path(column), remote: true, title: t('.tooltips.settings'), role: 'button', data: {toggle: 'tooltip', placement: 'bottom'} do
        = icon('cog', class: 'fa-fw')
    %li
      = link_to admin_column_pictures_path(column), remote: true, title: t('.tooltips.pictures'), role: 'button', data: {toggle: 'tooltip', placement: 'bottom', container: 'body'} do
        = icon('photo', class: 'fa-fw')
    %li
      = link_to admin_column_segments_path(column), method: :post, remote: true, title: t('.tooltips.new'), role: 'button', data: {toggle: 'tooltip', placement: 'bottom'} do
        = icon('file-o', class: 'fa-fw')
    %li.info
      %a.paste-segment{title: t('.tooltips.paste'), role: 'button', data: {url: paste_admin_column_segments_path(column), toggle: 'tooltip', placement: 'bottom'}}
        = icon('paste', class: 'fa-fw')
    %li.info
      %a.paste-segment{title: t('.tooltips.refer'), role: 'button', data: {url: refer_admin_column_segments_path(column), toggle: 'tooltip', placement: 'bottom'}}
        = icon('link', class: 'fa-fw')
    - if current_user.can_delete?(column, at: current_store)
      %li.danger
        = link_to admin_column_path(column), method: :delete, remote: true, title: t('.tooltips.delete'), data: {toggle: 'tooltip', placement: 'bottom', confirm: t('.delete.confirm'), 'confirm-title': t('actions.confirm.title'), 'confirm-proceed': t('actions.confirm.proceed'), 'confirm-cancel': t('actions.confirm.cancel')} do
          = icon('trash-o', class: 'fa-fw')
