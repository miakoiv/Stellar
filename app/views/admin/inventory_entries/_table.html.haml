.table-responsive
  %table.table.table-striped.table-hover.table-loose
    %thead
      %tr
        %th.col-xs-2= col(InventoryEntry, :recorded_at)
        %th.col-xs-2= col(InventoryEntry, :source_id)
        %th.col-xs-1.text-right.no-wrap= col(InventoryEntry, :on_hand)
        %th.col-xs-1.text-right.no-wrap= col(InventoryEntry, :reserved)
        %th.col-xs-1.text-right.no-wrap= col(InventoryEntry, :pending)
        %th.col-xs-2.text-right= col(InventoryEntry, :value)
        %th= col(InventoryEntry, :note)

    %tbody
      = content_tag_for :tr, @inventory_item.inventory_entries do |inventory_entry|
        %td= l(inventory_entry.recorded_at)
        %td
          - if inventory_entry.source.present?
            = link_to_if current_user.can_read?(inventory_entry.source.class), "#{title(inventory_entry.source.class)} #{inventory_entry.source}", [:admin, inventory_entry.source]
        %td.text-right= inventory_entry.on_hand
        %td.text-right= inventory_entry.reserved
        %td.text-right= inventory_entry.pending
        %td.text-right.currency= humanized_money_with_symbol inventory_entry.value
        %td= inventory_entry.note
