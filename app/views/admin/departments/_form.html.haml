= bootstrap_form_for [:admin, @department], layout: :horizontal,
    label_col: 'col-sm-4', control_col: 'col-sm-8' do |f|
  .panel.panel-default
    .panel-body
      %fieldset{disabled: locked}
        = f.text_field :name, required: true
        = f.select :category_ids, current_portal.category_options, {include_blank: true}, {multiple: true, class: 'selectize'}
      - unless locked
        %fieldset.actions
          = f.form_group do
            = f.primary
