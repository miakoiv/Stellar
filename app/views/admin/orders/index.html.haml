.page-header
  - if current_user.can_create?(Order)
    = link_to new_admin_order_path, class: 'btn btn-primary' do
      = icon('plus', 'New Order')
  %h1= icon('truck', 'Orders')

%ul.nav.nav-tabs{role: 'tablist'}
  %li.active{role: 'presentation'}
    %a{href: '#orders', role: 'tab', data: {toggle: 'tab'}} Current orders
  %li{role: 'presentation'}
    %a{href: '#approved', role: 'tab', data: {toggle: 'tab'}} Approved orders

.tab-content
  #orders.tab-pane.fade.in.active
    %h2.visible-print-block Current orders
    = render partial: 'admin/orders/table', object: @orders, as: :orders

  #approved.tab-pane.fade
    %h2.visible-print-block Approved orders
    = render partial: 'admin/orders/table', object: @approved, as: :orders
