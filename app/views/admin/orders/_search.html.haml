.panel.panel-info
  .panel-heading
    %h4.panel-title= t('actions.search')
  .panel-body
    = form_for @search, url: admin_orders_path, method: :get do |f|
      .row
        .col-sm-6.col-md-3
          .form-group
            = f.select :order_type_id, grouped_options_for_select([[col(OrderType, :incoming), current_group.incoming_order_types.map { |o| [o.to_s, o.id] }], [col(OrderType, :outgoing), current_group.outgoing_order_types.map { |o| [o.to_s, o.id] }]], @search.order_type_id), {}, {placeholder: col(Order, :order_type_id), class: 'form-control selectize'}
        .col-sm-6.col-md-3
          .form-group
            = f.select :status, Order.statuses.map { |s| [Order.human_attribute_value(:status, s), s] }, {include_blank: col(Order, :status)}, {class: 'form-control selectize'}
        .col-sm-4.col-md-2
          .form-group
            = f.search_field :date, autocomplete: 'off', placeholder: col(Order, :completed_at), class: 'form-control', data: {provide: 'datepicker', 'date-format': 'yyyy-mm-dd', 'date-language': I18n.locale, 'date-orientation': 'bottom'}
        .col-sm-4.col-md-2
          .form-group
            = f.search_field :customer, autocomplete: 'off', placeholder: col(Order, :customer_name), class: 'form-control'
        .col-sm-4.col-md-2
          .form-group
            = f.submit t('actions.search'), class: 'btn btn-block btn-primary'
