= content_tag_for :tr, customizable.customizations do |customization|
  %td= customization.custom_attribute
  %td= customization.custom_value
  %td.hidden-print.text-right
    = link_to icon('remove', t('actions.delete')), admin_customization_path(customization),
        remote: true, method: :delete, class: 'btn btn-sm btn-danger'
