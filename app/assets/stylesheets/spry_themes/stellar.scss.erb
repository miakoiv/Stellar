/*
 * Theme specific styles
 */

$body-bg:         #fff;
$brand-primary:   #99000f;
$brand-secondary: #0a4766;
$brand-tertiary:  #0b9de5;

$navbar-inverse-bg: $brand-secondary;
$navbar-default-link-active-bg: transparent;

$border-radius-base:  0;
$border-radius-large: 0;
$border-radius-small: 0;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

#content-wrap, .offcanvas .inner-wrap { padding-top: 80px; }

#main-nav {
  @include box-shadow(0 0 18px 0 rgba(0,0,0,0.5));

  > .container {
    padding-top: 15px;    // padding the container only,
    padding-bottom: 15px; // not the contained elements

    .navbar-brand {
      padding-top: 0;
      padding-bottom: 0;

      img { max-height: 50px; }
    }

    .navbar-nav {
      font-size: $font-size-small;
      font-weight: 500;

      > li.active:before {
        content: '';
        position: absolute;
        left: 15px;
        right: 15px;
        bottom: 10px;
        border-bottom: 3px solid $brand-primary;
      }
    }
    #navbar-search .form-control {}
  }
}

#page-nav {
  font-size: $font-size-small;
  font-weight: 500;
}

.navbar-nav > li > .dropdown-menu {
  animation: dropdown 0.1s ease-in;
  transform-origin: top;
}
@keyframes dropdown {
  0% {
    opacity: 0;
    transform: scale(1, 0);
  }
  100% {
    opacity: 1;
    transform: scale(1, 1);
  }
}

.navbar-nav > li > .mega-dropdown-menu {
  @include box-shadow(0 0 30px 0 rgba(0,0,0,0.05) inset);
  background-color: #fff;
}
.mega-dropdown-menu .row {
  display: flex;
  flex-wrap: wrap;
  border-right: 1px solid $table-border-color;
}
.mega-dropdown-menu .row > li {
  @extend .col-sm-3, .col-md-2;
  margin-bottom: 20px;
  border-left: 1px solid $table-border-color;
}
.mega-dropdown-menu li a {
  color: inherit;
  text-decoration: none;
}
.mega-dropdown-menu li a:hover {
  .page-image { transform: scale(1.05); }
}
.mega-dropdown-menu li ul {
  list-style: none;
  padding-left: $grid-gutter-width/2;
  font-size: $font-size-small;
}
.mega-dropdop-menu li ul li {
  position: relative;
  padding-left: 1em;

  &:before {
    @extend .fa;
    content: "\f0da";
    display: block;
    position: absolute;
    left: 0;
    font-size: $font-size-base;
  }
}
.mega-dropdown-menu li ul li a {
  color: inherit;
  text-decoration: none;

  &:hover { color: $brand-primary; }
}
.mega-dropdown-menu .row > li > a > .page-image {
  position: relative;
  height: 0;
  padding-bottom: 100%;
  transition: all 0.4s ease-in-out 0s;

  img { @extend .img-contain, .img-center; }
}
.mega-dropdown-menu .row > li > a > .page-title {
  margin-top: 10px;
  color: $brand-primary;
}
.mega-dropdown-menu li ul li a .page-image { display: none; }

/*
  on extra small screens the navbar will collapse
  and we hide the main categories section
*/
@media (max-width: $screen-sm-min) {
  #content-wrap, .offcanvas .inner-wrap { padding-top: 60px; }

  #main-nav {
    > .container {
      padding-top: 5px;
      padding-bottom: 5px;

      .navbar-brand {
        padding-top: 10px;
        padding-bottom: 10px;

        img { max-height: 30px; }
        span { font-size: 14px; }
      }
    }
  }
  #categories-wrap { display: none; }
  .products, .product-detail { padding-top: 15px; }
}


/*
  portal wrapper
*/
#portal-wrap {
  @extend .container;
  margin-top: 30px;
  padding-bottom: 30px;
}

/*
  search panel and search results
*/
#search-panel-wrap {
  padding-top: 10px;
  background-color: #fff;
  background-image: linear-gradient(90deg, #eee .1em, transparent .1em);
  background-size: 0.333em 100%;
  border-bottom: 1px solid $table-border-color;

  .search-panel {
    @extend .container;
  }
}

#search-results-wrap {
  margin-top: 20px;

  .products {
    @extend .container;
  }
}

/*
  storefront wrapper and layout
*/
#store-wrap {
  @extend .container;
  margin-top: 30px;
  padding-bottom: 30px;
}
#store-layout { @extend .row; }
#store-header {
  @extend .col-sm-3, .col-lg-2;
  padding-right: 0;
}
#store-body { @extend .col-sm-9, .col-lg-10; }

#categories-wrap {
  > .categories {
    a { transition: all 0.2s ease-in-out 0s; }

    > ul {
      @extend .nav, .nav-pills, .nav-stacked;
      font-size: $font-size-small;

      > li.category {
        margin-left: -15px;

        &.active {
          > .subcategories-wrap { display: block; }

          > a {
            background-color: transparent;
            background-image: url(<%= asset_path('leasit-bar.svg') %>);
          }
        }
        &:hover > a { background-color: transparent; }
        > a {
          font-weight: 500;
          background-color: transparent;
          background-image: url(<%= asset_path('leasit-bar-gradient.svg') %>);
          background-position: top left;
          background-size: cover;

          img {
            @extend .box-icon;
            float: left;
            margin-right: 10px;
          }
          p {
            margin: 0;
            line-height: 25px;
            white-space: nowrap;
          }
        }
        > .subcategories-wrap {
          display: none;

          > .subcategories {
            > ul {
              @extend .nav, .nav-pills, .nav-stacked;
              margin-top: 2px;
              margin-left: 35px;

              > li.category {
                &.active > a {
                  background-color: transparent;
                  background-image: url(<%= asset_path('leasit-bar.svg') %>);
                  background-position: top left;
                  background-size: cover;
                }
                &:hover > a { background-color: transparent; }
                > a {
                  padding: 5px 15px;

                  img { display: none; }
                  p { margin: 0; }
                }
              }
            }
          }
        }
      }
    }
  }
}

#products-wrap {
  .products {
    @extend .row;

    .product-table { @extend .col-xs-12; }

    .product-grid {
      a, .btn { transition: all 0.2s ease-in-out 0s; }

      > ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 0;
        border-right: 1px solid $table-border-color;

        li.product {
          @extend .col-xs-6, .col-sm-4, .col-md-4, .col-lg-3;
          padding-bottom: 20px;
          border-left: 1px solid $table-border-color;
          border-bottom: 1px solid $table-border-color;

          &.double {
            @extend .col-xs-12, .col-sm-8, .col-md-8, .col-lg-6;
            @extend .clearfix;
            padding-top: 10px;
            border-top: 2px solid $text-color;

            a {
              .product-image {
                @extend .col-xs-6;
                padding-left: 0;
                margin-bottom: 0;
              }
              .product-text {
                @extend .col-xs-6;
                padding-right: 0;
              }
              .promotions {
                @extend .col-xs-6;
                padding-right: 0;
              }
            }
            .buy-now {
              @extend .col-xs-6, .col-xs-offset-6;
              padding-right: 0;
            }
          }

          &:hover {
            @include box-shadow(0 0 30px 0 rgba(0,0,0,0.05) inset);

            a {
              h3 { color: $brand-primary; }
              img { transform: scale(1.05); }
            }
          }
          a {
            display: block;
            padding-top: 10px;
            color: inherit;
            text-decoration: none;

            .product-image {
              margin-bottom: 15px;

              img {
                @extend .img-responsive;
                margin: 0 auto;
                transition: all 0.4s ease-in-out 0s;
              }
            }
            .product-text {
              h3 {
                margin-top: 0;
                font-size: $font-size-large;

                .small {
                  display: block;
                  text-transform: uppercase;
                }
              }
              .description {
                position: relative;
                overflow: hidden;
                max-height: 120px;
                margin-bottom: 10px;
                font-size: $font-size-small;
                color: $gray;

                &:after {
                  @include gradient-vertical(rgba(0,0,0,0), rgba($text-color, 0.1), 50%, 100%);
                  content: '';
                  display: block;
                  position: absolute;
                  left: $grid-gutter-width/-2;
                  right: $grid-gutter-width/-2;
                  top: 110px;   // obscures the bottom portion
                  height: 10px; // but clipped by bounding box
                }
              }
            }
            .promotions {
              > .promotion {
                @extend .label, .label-info;
                display: block;
                margin-bottom: 10px;
              }
            }
          }
          .buy-now {
            @extend .clearfix;

            .store {
              @extend .pull-right;
              margin-top: 2px;
              margin-bottom: 0;
              font-size: $font-size-small;
              font-weight: 500;

              img {
                display: inline-block;
                margin-right: 5px;
              }
            }
            .price {
              @extend .pull-left, .label, .label-primary;
              background-color: transparent;
              background-image: url(<%= asset_path('leasit-bar.svg') %>);
              background-position: top left;
              background-size: cover;
              font-size: 12px;
              line-height: 2;
              margin-bottom: 0;
              border-radius: 0;
            }
            form {
              button {
                @extend .btn-default;
                border-left: 0;
                padding-left: 9px;
              }
            }
          }
        }
      }
    }
  }
}

#product-detail-wrap {
  .product-detail {
    @extend .row;
    border-left: 1px solid $table-border-color;

    a, .btn { transition: all 0.2s ease-in-out 0s; }

    .product-header {
      @extend .col-xs-12;
      margin-bottom: 30px;

      .actions {
        @extend .pull-right;

        .btn { display: inline-block; }
      }

      .product-title {
        margin: 0;
        font-size: 3em;

        .small {
          display: block;
          text-transform: uppercase;
          font-size: 40%;
          letter-spacing: 0.05em;
        }
      }
    }
    .product-body {
      .images.presentational {
        @extend .col-xs-12, .col-sm-7, .col-md-8, .col-lg-9;
        margin-bottom: 30px;
      }
      .product-meta {
        @extend .col-xs-12, .col-sm-5, .col-md-4, .col-lg-3;

        .product-code {
          margin-bottom: 20px;
        }
        .buy-now {
          @extend .well;

          .product-pricing {
            .price {
              @extend .lead, .text-primary;
              margin-right: 0.5em;
              margin-bottom: 0;
              font-weight: 500;

              .tax-rate, .unit-price {
                @extend .text-muted;
                display: inline-block;
                font-size: $font-size-base;
                font-weight: 400;
              }
              .tax-rate { margin-left: 0.5em; }
              .unit-price { display: block; }
            }
            .retail-price {
              text-decoration: line-through;
            }
          }
          form {
            .form-group {
              margin-top: 20px;

              button {
                @extend .btn-block, .btn-lg, .btn-success;
              }
            }
          }
          .go-checkout .btn {
            @extend .btn-block, .btn-lg;
          }
        }
        .variant-products {
          margin-bottom: 20px;

          button { @extend .btn-block; }
          .dropdown-menu {
            @extend .dropdown-menu-right;
          }
        }
        .product-stock {
          ul {
            font-size: $font-size-small;

            > li > span { @extend .badge; }
          }
        }
      }

      .product-description {
        @extend .col-xs-12, .col-sm-12, .col-md-12, .col-lg-6;

        .body-text { margin-bottom: 20px; }
      }
      .images.technical {
        @extend .col-xs-12, .col-sm-6, .col-md-6, .col-lg-3;

        .image { padding-bottom: 100%; }
      }
      .iframes {}
      .product-properties {
        @extend .col-xs-12, .col-sm-6, .col-md-6, .col-lg-3;

        .properties, .components {
          tr > :last-child { padding-right: 10px; }
        }
      }
      .images {
        .nav { @extend .nav-tabs, .nav-sm; }
        .image {
          position: relative;
          height: 0;
          padding-bottom: 61.8%; // golden ratio

          > a.image-link {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;

            img {
              display: block;
              max-width: 100%;
              max-height: 100%;
              width: auto;
              height: auto;
              margin: 0 auto;
              transition: all 0.4s ease-in-out 0s;

              &:hover {
                @include box-shadow(0 0 15px 0 rgba(0,0,0,0.15));
              }
            }
          }
        }
      }
    }
    .product-footer {
      @extend .col-xs-12;
      margin-top: 20px;
      border-top: 1px solid $table-border-color;

      h2 { font-size: $font-size-large; }

      .requisite-products, .variant-products {
        ul {
          list-style: none;
          padding-left: 0;
          display: flex;
          flex-flow: row wrap;

          li.product {
            @extend .col-xs-6, .col-sm-4, .col-md-3;
            flex: 0 1 auto;
            padding-bottom: 40px;
            border-right: 1px solid $table-border-color;

            &:hover {
              a {
                h3 { color: $brand-primary; }
              }
            }
            a {
              display: block;
              color: inherit;
              text-decoration: none;

              .product-image {
                position: relative;
                overflow: hidden;
                width: 100%;
                height: 0;
                padding-bottom: 100%;

                img {
                  max-width: 100%;
                  max-height: 100%;
                  width: auto;
                  height: auto;
                  position: absolute;
                  left: 50%;
                  top: 50%;
                  transform: translate(-50%,-50%);
                }
              }
              .product-text {
                h3 {
                  font-size: $font-size-base;

                  .small {
                    display: block;
                    text-transform: uppercase;
                  }
                }
              }
              .properties {
                font-size: $font-size-small;
                tr > :first-child { padding-left: 0; }
              }
            }
            .buy-now {
              position: absolute;
              bottom: 10px;
              left: $grid-gutter-width/2;
              right: $grid-gutter-width/2;
              display: flex;

              .price {
                @extend .label, .label-primary;
                flex: 0 1 auto;
                background-color: transparent;
                background-image: url(<%= asset_path('leasit-bar.svg') %>);
                background-position: top left;
                background-size: cover;
                font-size: 12px;
                line-height: 2;
                margin-bottom: 0;
                border-radius: 0;
              }
              form {
                flex: 0 1 auto;
                @extend .form-inline;
                button { @extend .btn-default; }
              }
            }
          }
        }
      }
    }
  }
}

.footer {
  background-color: $navbar-default-bg;
}

@media print {
  #products-wrap {
    .products {
      .product-grid {
        margin: 0;
        padding: 0;

        ul.masonry-grid {
          display: block;
          position: static !important;
          height: auto !important;

          li.product {
            display: block;
            position: static !important;
            width: 100%;
            max-width: 100%;
            padding: 10px 0;
            border-top: 1px solid #eee;
            page-break-inside: avoid;
            break-inside: avoid;

            &:first-child { border-top: 0; }

            a {
              display: block;
              padding: 0;
              border: 0;

              &:after {
                content: '';
                display: table;
                clear: both;
              }

              .product-image {
                float: left;
                width: 200px;
                height: auto;
                padding: 0;

                img {
                  position: static;
                  display: block;
                  transform: none;
                  margin: 0 auto;
                }
              }
              .product-text {
                margin-left: 220px;
                text-align: left;

                .description { max-height: none; }
              }
              .promotion { display: none; }
            }
            .buy-now {
              position: static;
              display: block;

              .price { flex: none; }
              form { display: none; }
            }
          }
        }
      }
    }
  }
}
