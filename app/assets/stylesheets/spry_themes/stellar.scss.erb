/*
 * Theme specific styles
 */

$body-bg:         #fff;
$brand-primary:   #99000f;
$brand-secondary: #0a4766;
$brand-tertiary:  #0b9de5;

$navbar-inverse-bg: $brand-secondary;
$navbar-default-link-active-bg: transparent;

$border-radius-base:  0;
$border-radius-large: 0;
$border-radius-small: 0;

@import "bootstrap-font-awesome";
@import "bootstrap-generators";
@import "bootstrap-tweaks";
@import "fonts";
@import "print";

#content-wrap, .offcanvas .inner-wrap { padding-top: 80px; }

#main-nav {
  @include box-shadow(0 0 18px 0 rgba(0,0,0,0.5));

  > .container {
    padding-top: 15px;    // padding the container only,
    padding-bottom: 15px; // not the contained elements

    .navbar-brand {
      padding-top: 0;
      padding-bottom: 0;

      img { max-height: 50px; }
    }

    .navbar-nav {
      font-size: $font-size-small;
      font-weight: 500;

      > li.active:before {
        content: '';
        position: absolute;
        left: 15px;
        right: 15px;
        bottom: 10px;
        border-bottom: 3px solid $brand-primary;
      }
    }
    #navbar-search .form-control {}
  }
}

#page-nav {
  font-size: $font-size-small;
  font-weight: 500;
}

.navbar-nav > li > .dropdown-menu {
  animation: dropdown 0.1s ease-in;
  transform-origin: top;
}
@keyframes dropdown {
  0% {
    opacity: 0;
    transform: scale(1, 0);
  }
  100% {
    opacity: 1;
    transform: scale(1, 1);
  }
}

.navbar-nav > li > .mega-dropdown-menu {
  @include box-shadow(0 0 30px 0 rgba(0,0,0,0.05) inset);
  background-color: #fff;
}
.mega-dropdown-menu .row {
  display: flex;
  flex-wrap: wrap;
  border-right: 1px solid $table-border-color;
}
.mega-dropdown-menu .row > li {
  @extend .col-sm-3, .col-md-2;
  margin-bottom: 20px;
  border-left: 1px solid $table-border-color;
}
.mega-dropdown-menu li a {
  color: inherit;
  text-decoration: none;
}
.mega-dropdown-menu li a:hover {
  .page-image { transform: scale(1.05); }
}
.mega-dropdown-menu li ul {
  list-style: none;
  padding-left: $grid-gutter-width/2;
  font-size: $font-size-small;
}
.mega-dropdop-menu li ul li {
  position: relative;
  padding-left: 1em;

  &:before {
    @extend .fa;
    content: "\f0da";
    display: block;
    position: absolute;
    left: 0;
    font-size: $font-size-base;
  }
}
.mega-dropdown-menu li ul li a {
  color: inherit;
  text-decoration: none;

  &:hover { color: $brand-primary; }
}
.mega-dropdown-menu .row > li > a > .page-image {
  position: relative;
  height: 0;
  padding-bottom: 100%;
  transition: all 0.4s ease-in-out 0s;

  img { @extend .img-contain, .img-center; }
}
.mega-dropdown-menu .row > li > a > .page-title {
  margin-top: 10px;
  color: $brand-primary;
}
.mega-dropdown-menu li ul li a .page-image { display: none; }

/*
  on extra small screens the navbar will collapse
  and we hide the main categories section
*/
@media (max-width: $screen-sm-min) {
  #content-wrap, .offcanvas .inner-wrap { padding-top: 60px; }

  #main-nav {
    > .container {
      padding-top: 5px;
      padding-bottom: 5px;

      .navbar-brand {
        padding-top: 10px;
        padding-bottom: 10px;

        img { max-height: 30px; }
        span { font-size: 14px; }
      }
    }
  }
  #categories-wrap { display: none; }
  .products, .product-detail { padding-top: 15px; }
}


/*
  portal wrapper
*/
#portal-wrap {
  @extend .container;
  margin-top: 30px;
  padding-bottom: 30px;
}

/*
  search panel and search results
*/
#search-panel-wrap {
  padding-top: 10px;
  background-color: #fff;
  background-image: linear-gradient(90deg, #eee .1em, transparent .1em);
  background-size: 0.333em 100%;
  border-bottom: 1px solid $table-border-color;

  .search-panel {
    @extend .container;
  }
}

#search-results-wrap {
  margin-top: 20px;

  .products {
    @extend .container;
  }
}

/*
  storefront wrapper and layout
*/
#store-wrap {
  @extend .container;
  margin-top: 30px;
  padding-bottom: 30px;
}
#store-layout { @extend .row; }
#store-header {
  @extend .col-sm-3, .col-lg-2;
  padding-right: 0;
}
#store-body { @extend .col-sm-9, .col-lg-10; }

.categories ul {
  @extend .nav, .nav-pills, .nav-stacked;
  font-size: $font-size-small;
}
.categories .category {
  margin-left: -15px;

  .subcategories-wrap { display: none; }
  a {
    font-weight: 500;
    background-color: transparent;
    background-image: url(<%= asset_path('leasit-bar-gradient.svg') %>);
    background-position: top left;
    background-size: cover;

    img {
      @extend .box-icon;
      float: left;
      margin-right: 10px;
    }
    p {
      margin: 0;
      line-height: 25px;
      white-space: nowrap;
    }
  }
  a:hover { background-color: transparent; }
}
.categories .category.active {
  .subcategories-wrap { display: block; }
  > a {
    background-color: transparent;
    background-image: url(<%= asset_path('leasit-bar.svg') %>);
  }
}
.categories .subcategories > ul {
  margin-top: 2px;
  margin-left: 35px;

  .category a { padding: 5px 15px; }
}
.categories a { transition: all 0.2s ease-in-out 0s; }


.products { @extend .row; }
.products .product-table { @extend .col-xs-12; }
.products .product-grid ul {
  @extend .clearfix;
  list-style: none;
  padding-left: 0;
  margin-bottom: 0;
  border-right: 1px solid $table-border-color;
}
.products .product-grid .product {
  @extend .col-xs-6, .col-sm-4, .col-md-4, .col-lg-3;
  padding-bottom: 20px;
  border-left: 1px solid $table-border-color;
  border-bottom: 1px solid $table-border-color;
}
.product-grid .product {
  a, .btn { transition: all 0.2s ease-in-out 0s; }
  &:hover {
    @include box-shadow(0 0 30px 0 rgba(0,0,0,0.05) inset);

    a {
      h3 { color: $brand-primary; }
      img { transform: scale(1.05); }
    }
  }
}
.product-grid .product a {
  @extend .clearfix;
  display: block;
  padding-top: 10px;
  color: inherit;
  text-decoration: none;
}
.product-grid .product .product-image {
  margin-bottom: 15px;

  img {
    @extend .img-responsive;
    margin: 0 auto;
    transition: all 0.4s ease-in-out 0s;
  }
}
.product-grid .product .product-text {
  h3 {
    margin-top: 0;
    font-size: $font-size-large;

    .small {
      display: block;
      text-transform: uppercase;
    }
  }
  .description {
    position: relative;
    overflow: hidden;
    max-height: 120px;
    margin-bottom: 10px;
    font-size: $font-size-small;
    color: $gray;

    &:after {
      @include gradient-vertical(rgba(0,0,0,0), rgba($text-color, 0.1), 50%, 100%);
      content: '';
      display: block;
      position: absolute;
      left: $grid-gutter-width/-2;
      right: $grid-gutter-width/-2;
      top: 110px;   // obscures the bottom portion
      height: 10px; // but clipped by bounding box
    }
  }
}
.product-grid .product .promotion {
  @extend .label, .label-info;
  display: block;
  margin-bottom: 10px;
}
.product-grid .product .buy-now {
  @extend .clearfix;
}
.product-grid .product .buy-now .btn {
  @extend .btn-default;
  border-left: 0;
  padding-left: 9px;
}
.product-grid .product .price {
  @extend .pull-left, .label, .label-primary;
  background-color: transparent;
  background-image: url(<%= asset_path('leasit-bar.svg') %>);
  background-position: top left;
  background-size: cover;
  font-size: 12px;
  line-height: 2;
  margin-bottom: 0;
  border-radius: 0;
}
.product-grid .product .store {
  @extend .pull-right;
  margin-top: 2px;
  margin-bottom: 0;
  font-size: $font-size-small;
  font-weight: 500;

  img {
    display: inline-block;
    margin-right: 5px;
  }
}


.product-grid .product.double {
  @extend .col-xs-12, .col-sm-8, .col-md-8, .col-lg-6;
  padding-top: 10px;
  border-top: 2px solid $text-color;
}
.product-grid .product.double .product-image {
  @extend .col-xs-6;
  padding-left: 0;
  margin-bottom: 0;
}
.product-grid .product.double .product-text {
  @extend .col-xs-6;
  padding-right: 0;
}
.product-grid .product.double .promotions {
  @extend .col-xs-6;
  padding-right: 0;
}
.product-grid .product.double .product-pricing {
  @extend .col-xs-6;
  padding-right: 0;
}


.product-detail {
  @extend .row;
  border-left: 1px solid $table-border-color;

  a, .btn { transition: all 0.2s ease-in-out 0s; }
}
.product-header {
  @extend .col-xs-12;
  margin-bottom: 30px;
}
.product-header .product-title {
  margin: 0;
  font-size: 3em;

  .small {
    display: block;
    text-transform: uppercase;
    font-size: 40%;
    letter-spacing: 0.05em;
  }
}
.product-header .actions {
  @extend .pull-right;

  .btn { display: inline-block; }
}
.product-body .images.presentational {
  @extend .col-xs-12, .col-sm-7, .col-md-8, .col-lg-9;
  margin-bottom: 30px;
}
.product-body .product-meta {
  @extend .col-xs-12, .col-sm-5, .col-md-4, .col-lg-3;
  .product-code { margin-bottom: 20px; }
}
.product-body .product-meta .buy-now {
  @extend .well;
  .btn { @extend .btn-block, .btn-lg; }
  .form-group { margin-top: 20px; }
  .form-group .btn { @extend .btn-success; }
}
.product-body .product-pricing .price {
  @extend .lead, .text-primary;
  margin-right: 0.5em;
  margin-bottom: 0;
  font-weight: 500;

  .tax-rate, .unit-price {
    @extend .text-muted;
    display: inline-block;
    font-size: $font-size-base;
    font-weight: 400;
  }
  .tax-rate { margin-left: 0.5em; }
  .unit-price { display: block; }
}
.product-body .product-pricing .retail-price { text-decoration: line-through; }
.product-body .variant-products {
  margin-bottom: 20px;
  .btn { @extend .btn-block; }
  .dropdown-menu { @extend .dropdown-menu-right; }
}
.product-body .product-stock ul {
  font-size: $font-size-small;
  > li > span { @extend .badge; }
}
.product-body .product-description {
  @extend .col-xs-12, .col-sm-12, .col-md-12, .col-lg-6;
  .body-text { margin-bottom: 20px; }
}
.product-body .images.technical {
  @extend .col-xs-12, .col-sm-6, .col-md-6, .col-lg-3;
  .image { padding-bottom: 100%; }
}
.product-body .product-properties {
  @extend .col-xs-12, .col-sm-6, .col-md-6, .col-lg-3;
  .properties, .components {
    tr > :last-child { padding-right: 10px; }
  }
}
.product-body .images .image {
  position: relative;
  height: 0;
  padding-bottom: 61.8%; // golden ratio
}
.product-body .images .image-link {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  img {
    display: block;
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    margin: 0 auto;
    transition: all 0.4s ease-in-out 0s;
  }
  img:hover {
    @include box-shadow(0 0 15px 0 rgba(0,0,0,0.15));
  }
}
.product-body .images .nav { @extend .nav-tabs, .nav-sm; }

.product-footer {
  @extend .col-xs-12;
  margin-top: 20px;
  border-top: 1px solid $table-border-color;
}
.product-footer h2 { font-size: $font-size-large; }
.product-footer .requisite-products ul,
.product-footer .variant-products ul {
  display: flex;
  flex-flow: row wrap;
  list-style: none;
  padding-left: 0;

  .product {
    @extend .col-xs-6, .col-sm-4, .col-md-4, .col-lg-3;
    flex: 0 1 auto;
    padding-bottom: 40px;
    border-right: 1px solid $table-border-color;
  }
  .product .properties {
    font-size: $font-size-small;
    tr > :first-child { padding-left: 0; }
  }
}
#offer-requisites-modal .requisite-products { @extend .product-grid; }

.footer {
  background-color: $navbar-default-bg;
}

@media print {
  #products-wrap {
    .products {
      .product-grid {
        margin: 0;
        padding: 0;

        ul.masonry-grid {
          display: block;
          position: static !important;
          height: auto !important;

          li.product {
            display: block;
            position: static !important;
            width: 100%;
            max-width: 100%;
            padding: 10px 0;
            border-top: 1px solid #eee;
            page-break-inside: avoid;
            break-inside: avoid;

            &:first-child { border-top: 0; }

            a {
              display: block;
              padding: 0;
              border: 0;

              &:after {
                content: '';
                display: table;
                clear: both;
              }

              .product-image {
                float: left;
                width: 200px;
                height: auto;
                padding: 0;

                img {
                  position: static;
                  display: block;
                  transform: none;
                  margin: 0 auto;
                }
              }
              .product-text {
                margin-left: 220px;
                text-align: left;

                .description { max-height: none; }
              }
              .promotion { display: none; }
            }
            .buy-now {
              position: static;
              display: block;

              .price { flex: none; }
              form { display: none; }
            }
          }
        }
      }
    }
  }
}
