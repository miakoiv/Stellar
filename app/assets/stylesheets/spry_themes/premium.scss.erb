/*
 * Theme specific styles
 */

$body-bg:         #fff;
$brand-primary:   #3472f7;
$brand-success:   #05ae0e;
$brand-info:      #2ca8ff;
$brand-warning:   #ff9500;
$brand-danger:    #ff3b30;

$navbar-inverse-bg: #555;
$footer-bg:         #f6f6f6;
$bg-tone:           #f6f6f6;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";


/*
 * Extra tall navbar
 */
#main-nav {
  @include box-shadow(0 0 24px 0 rgba(0,0,0,0.5));
}
#main-nav .container {
  padding-top: 15px;
  padding-bottom: 15px;
}
#main-nav .navbar-brand {
  padding-top: 0;
  padding-bottom: 0;

  img { max-height: 50px; }
}

#side-nav {
  transform: translateX(0) translateZ(0) scale(0.95);
}
#side-nav.open {
  transform: translateX($navmenu-width) translateZ(0) scale(1);
}

/* Push content below the navbar */
#content-wrap, .offcanvas .inner-wrap { padding-top: 80px; }

/* Rounded navbar search */
#navbar-search input { border-radius: $input-height-base/2; }


/*
 * Less prominent mobile navbar
 */
@media (max-width: $screen-xs-max) {
  #content-wrap, .offcanvas .inner-wrap { padding-top: 60px; }

  #main-nav {
    @include box-shadow(0 0 4px 0 rgba(0,0,0,0.75));
  }
  #main-nav .container {
    padding-top: 5px;
    padding-bottom: 5px;
  }
  #main-nav .navbar-brand {
    padding-top: 10px;
    padding-bottom: 10px;

    img { max-height: 30px; }
  }
}


/*
 * Rounded buttons all over
 */
#static-wrap .btn,
#store-wrap .btn {
  @extend .btn-round;
}


/*
 * Dropdown opening animation
 */
.dropdown-menu { animation: dropdown 0.2s ease-in 0s; }
@keyframes dropdown {
  0% {
    opacity: 0;
    transform: translate(0, -10px);
  }
  100% {
    opacity: 1;
    transform: translate(0, 0);
  }
}


/*
 * Mega dropdown menu
 */
.navbar-nav > li > .mega-dropdown-menu {
  background-color: #fff;
}
.mega-dropdown-menu .row {
  display: flex;
  flex-wrap: wrap;
}
.mega-dropdown-menu .row > li {
  @extend .col-sm-3, .col-md-2;
  margin-bottom: 20px;
}
.mega-dropdown-menu li a {
  color: inherit;
  text-decoration: none;
}
.mega-dropdown-menu li a:hover {
  .mega-dropdown-image { transform: scale(1.05); }
  .mega-dropdown-image img { border-color: $gray-lighter; }
}
.mega-dropdown-image {
  position: relative;
  height: 0;
  padding-bottom: 100%;
  transition: all 0.4s ease-in-out 0s;

  img {
    @extend .img-contain, .img-center;
    border: 5px solid transparent;
  }
}
.mega-dropdown-text h3 {
  margin-top: 0;
  padding-top: 10px;
  font-size: $font-size-base;
  font-weight: 400;
}
.mega-dropdown-menu li ul {
  list-style: none;
  padding-left: $grid-gutter-width/2;
  border-left: 1px dotted $brand-primary;
  font-size: $font-size-small;
  line-height: 1;
}
.mega-dropdown-menu li ul li a {
  display: block;
  padding: 5px 0;
  color: inherit;
  text-decoration: none;

  &:hover { color: $link-hover-color; }
}
.mega-dropdown-menu .product-item .mega-dropdown-text { @extend .text-center; }


/*
 * Static content wrapper
 */
#static-wrap > .container {
  padding-top: 20px;
  padding-bottom: 20px;
}


/*
 * Storefront and content wrappers
 */
#store-wrap { }
#categories-wrap { display: none; }
#products-wrap { }
#product-detail-wrap { }
#search-panel-wrap { }

/* Slightly darker right column on medium and up */
@media (min-width: $screen-md-min) {
  #product-detail-wrap {
    background-image: linear-gradient(to right, $body-bg, $body-bg calc((100% - 970px) / 2 + 646px), $bg-tone calc((100% - 970px) / 2 + 646px), $bg-tone);
  }
}
@media (min-width: $screen-lg-min) {
  #product-detail-wrap {
    background-image: linear-gradient(to right, $body-bg, $body-bg calc((100% - 1170px) / 2 + 780px), $bg-tone calc((100% - 1170px) / 2 + 780px), $bg-tone);
  }
}


/*
 * Product filtering
 */
#filter-panel {
  display: block;
  left: 100%;
  right: auto;
  transform: translateX(0);
  transform: translateX(0) translateZ(0);
  transition: 0.4s ease all;
  backface-visibility: hidden;
  background-color: $body-bg;
}
#filter-panel.open {
  transform: translateX(-1*$navmenu-width);
  transform: translateX(-1*$navmenu-width) translateZ(0);
  @include box-shadow(0 0 6px 0 rgba(0,0,0,0.1));
}


/*
 * Search panel with search form
 */
#search-panel-wrap { background-color: $bg-tone; }
.search-panel .search-form { @extend .container; }


/*
 * Containers for product grid and product table
 */
.products {
  @extend .container;
  padding-top: 20px;
  padding-bottom: 20px;
}

/* Category header for products */
.products .page-header {
  @extend .text-center;
  display: block !important;
}
.products .page-header h1 {
  margin-top: 0;
  margin-bottom: 0;
  font-weight: 300;
}
@media (min-width: $screen-sm-min) {
  .products .page-header h1 { font-size: 3.6em; }
}


/*
 * Products in product list
 */
.product-list > ul {
  @extend .list-group;
}
.product-list .product {
  @extend .list-group-item, .clearfix;
  margin-bottom: 0;
  padding: 10px;
  border-width: 5px;
  border-color: transparent;
  border-radius: 0 !important;
  transition: all 0.2s ease-in-out 0s;

  &:hover {
    border-color: $gray-lighter;
    .product-image { transform: scale(1.05); }
    .buy-now .btn { @extend .btn-danger; }
  }
}
.product-list .product a {
  display: block;
  margin-right: 120px;
  color: inherit;
  text-decoration: none;
}

/* Product image and text */
.product-list .product-image {
  @extend .pull-left, .box-thumbnail;
  transition: all 0.4s ease-in-out 0.2s;

  img { bottom: auto; }
}
.product-list .product-text { padding-left: 100px; }
.product-list .product-text h3 {
  margin: 0;
  font-size: $font-size-base;
  font-weight: normal;

  .small { font-size: inherit; }
}
.product-list .product-text .description { display: none; }

/* Product promotions */
.product-list .promotions {
  position: absolute;
  bottom: 8px;
  left: 108px;
}
.product-list .promotion {
  @extend .label, .label-danger;
  @include box-shadow(0 0 4px 4px rgba(255,255,255,1));
  display: inline-block;
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding: 0;
  border-radius: 20px;
  font-size: $font-size-base;
}

/* Buy now widget and price */
.product-list .buy-now {
  @extend .text-center;
  position: absolute;
  width: 120px;
  right: 10px;
  bottom: 10px;
}
.product-list .buy-now-form .btn {
  @extend .btn-default, .btn-block;
  font-size: 16px;
  border: 0;
  border-radius: 0;
  transition: all 0.4s ease-in-out 0s;
}
.product-list .price {
  font-size: 20px;
  color: $gray-base;
}

/*
 * Products in product grid
 */
 .product-grid { @extend .row; }
 .product-grid > ul {
   list-style: none;
   padding-left: 0;
   margin-bottom: 0;
 }
.product-grid .product {
  @extend .col-xs-6, .col-sm-4, .col-md-3;
  margin-bottom: 10px;

  &:hover {
    a { border-color: $gray-lighter; }
    .product-image { transform: scale(1.05); }
    .buy-now .btn { @extend .btn-danger; }
  }
}
.product-grid .product a {
  display: block;
  position: relative;
  padding: 10px 10px 95px;
  border: 5px solid transparent;
  color: inherit;
  text-decoration: none;
  transition: all 0.2s ease-in-out 0s;
}

/* Product image and text */
.product-grid .product-image {
  position: relative;
  height: 0;
  padding-bottom: 100%;
  transition: all 0.4s ease-in-out 0.2s;

  img { @extend .img-contain, .img-center; }
}
.product-grid .product-text {
  height: 2.2em;
  overflow: hidden;
  margin-top: 10px;
  text-align: center;
}
.product-grid .product-text h3 {
  margin: 0;
  font-size: $font-size-base;
  font-weight: normal;

  .small { font-size: inherit; }
}
.product-grid .product-text .description { display: none; }

/* Product promotions */
.product-grid .promotions {
  position: absolute;
  top: 5px;
  left: 5px;
}
.product-grid .promotion {
  @extend .label, .label-danger;
  @include box-shadow(0 0 4px 4px rgba(255,255,255,1));
  display: inline-block;
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding: 0;
  border-radius: 20px;
  font-size: $font-size-base;
}

/* Buy now widget and price */
.product-grid .buy-now {
  position: absolute;
  right: 30px;
  bottom: 15px;
  left: 30px;
}
.product-grid .buy-now-form { text-align: center; }
.product-grid .buy-now-form .btn {
  @extend .btn-default, .btn-block;
  font-size: 16px;
  border: 0;
  border-radius: 0;
  transition: all 0.4s ease-in-out 0s;
}
.product-grid .price {
  position: absolute;
  right: 0;
  bottom: 30px;
  left: 0;
  text-align: center;
  font-size: 20px;
  color: $gray-base;
}


/*
 * Products in product table
 */
.product-table .product-title { margin-bottom: 5px; }
.product-table .product-title a { color: inherit; }
.product-table .price {
  font-size: 16px;
  color: $gray-base;
}


/*
 * Product detail
 */
.product-detail {
  @extend .container;
  padding-top: 20px;
  padding-bottom: 20px;
}
.product-detail .product-body,
.product-detail .product-header,
.product-detail .product-footer { @extend .row; }

/* Product header with breadcrumbs, actions */
.product-detail .product-header {
  position: relative;
  height: 240px;

  .breadcrumbs {
    display: block !important;
    @extend .col-xs-12, .col-md-8;
    @extend .small;
  }
  .actions {
    @extend .col-xs-12, .col-md-4;
    @extend .text-right;

    .btn {
      @extend .btn-sm;
      background-color: transparent;
      border-color: transparent;

      &:hover {
        background-color: $brand-primary;
        color: $body-bg;
      }
    }
  }
}

/* Product title */
.product-detail .product-header .product-title {
  @extend .col-xs-12, .col-md-4, .col-md-offset-8;
  @extend .text-center;
  position: absolute;
  right: 0;
  bottom: 20px;
  left: 0;
  margin-top: 40px;
  margin-bottom: 20px;
  padding-left: $grid-gutter-width;
  padding-right: $grid-gutter-width;
  font-size: $font-size-h3;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.1em;

  .small {
    display: block;
    font-size: $font-size-base;
    letter-spacing: 0.15em;
  }
}

/* Presentational images */
.product-detail .images.presentational {
  @extend .col-xs-12, .col-md-8;
  min-height: 400px;
  margin-top: -200px;
  margin-bottom: 60px;
}

/* On small viewports header and presentational images stack */
@media (max-width: $screen-sm-max) {
  .product-detail .product-header {
    height: auto;

    .product-title { position: static; }
  }
  .product-detail .images.presentational { margin-top: 0; }
}

/* Product meta */
.product-meta {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-4, .col-md-offset-0;
  margin-top: 40px;
  padding-left: $grid-gutter-width;
  padding-right: $grid-gutter-width;
}
.product-meta .buy-now {
  margin-bottom: 40px;
  padding-top: 20px;
  border-top: 1px solid $panel-default-border;
}
.product-meta .product-code {
  position: absolute;
  top: -28px;
  padding: 5px;
  font-size: $font-size-small;
}
.product-meta .price {
  display: inline-block;
  margin-bottom: 0;
  font-size: 42px;
  font-weight: 300;
  letter-spacing: -0.02em;

  .fa {
    position: relative;
    top: -0.667em;
    font-size: $font-size-large;
    color: $brand-danger;
  }
  .unit-price {
    @extend .text-muted;
    display: inline-block;
    margin-left: 0.5em;
    font-size: $font-size-base;
    letter-spacing: normal;
  }
}
.product-meta .retail-price {
  margin-left: 1.5em;
  text-decoration: line-through;
}
.product-meta .order-form {
  margin-top: 20px;

  .btn { @extend .btn-lg, .btn-block, .btn-success; }
}
.product-meta .go-checkout .btn { @extend .btn-block; }

/* Variant products dropdown */
.product-meta .variant-products {
  margin-bottom: 40px;

  .btn { @extend .btn-block; }
  .dropdown-menu { @extend .dropdown-menu-right; }
  .dropdown-menu .media-heading {
    font-size: $font-size-h5;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .dropdown-menu .media-heading .small { display: block; }
}

.product-meta .product-stock { margin-bottom: 40px; }
.product-meta .product-stock .list-group-item {
  padding-left: 0;
  padding-right: 0;
  border-right: 0;
  border-bottom: 0;
  border-left: 0;
  border-radius: 0;
  background-color: transparent;
}
.product-meta .product-stock .list-group-item span {
  @extend .badge;
}

/* Product description and properties */
.product-description {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-5, .col-md-offset-0, .col-md-push-3;
  margin-bottom: 40px;
}
.product-properties {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-4, .col-md-offset-0, .col-md-push-3;
  margin-bottom: 40px;
  padding-left: $grid-gutter-width;
  padding-right: $grid-gutter-width;
}

/* Technical images */
.product-detail .images.technical {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-3, .col-md-offset-0, .col-md-pull-9;
}
@media (min-width: $screen-md-min) {
  .product-detail .images.technical .gallery {
    min-height: 200px;
    background-color: $bg-tone;
  }
}

/* Product image galleries */
.product-detail .images {
  position: relative;
}
.product-detail .images .nav {
  @extend .nav-pills;
  display: flex;
  justify-content: center;
  position: absolute;
  z-index: $zindex-navbar;
  right: 15px;
  bottom: 10px;
  left: 15px;
}
.product-detail .images .nav li {
  flex: 0 1 auto;

  > a {
    padding: 3px;
    border-radius: 15.5px;
  }
  > a img { @extend .img-circle; }
}
.product-detail .images .gallery {
  .image-link { display: block; }

  img {
    @extend .img-responsive;
    margin: 0 auto;
    border: 5px solid transparent;
    transition: all 0.2s ease-in-out 0s;

    &:hover { border-color: $gray-lighter; }
  }
}

/* Product footer elements */
.product-footer .footer-header {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-8, .col-md-offset-0;
  margin-top: 40px;
  margin-bottom: 10px;
  font-size: $font-size-h4;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}
.product-footer > .requisite-products,
.product-footer > .variant-products {
  @extend .col-xs-12, .col-sm-8, .col-sm-offset-2;
  @extend .col-md-8, .col-md-offset-0;

  .product a { padding-bottom: 10px; }
  .product .product-text {
    height: auto;
    margin-bottom: 10px;
  }
}

/* Product offerings in modal */
#offer-requisites-modal .requisite-products { @extend .product-grid; }
