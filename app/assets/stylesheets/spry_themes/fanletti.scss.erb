/*
 * Theme specific styles
 */

$brand-primary: #ffcc00;
$navbar-default-link-hover-bg: transparent;
$navbar-default-link-active-bg: transparent;
$navbar-default-link-active-color: #000;
$body-bg: #fdfdfd;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body.fanletti {
  overflow-y: scroll;
  padding-top: 80px;
}

#main-nav {
  @include box-shadow(0 0 24px 0 rgba(0,0,0,0.333));
  font-size: $font-size-small;
  font-weight: 500;

  > .content {
    @extend .container;
    padding-top: 15px;    // padding the container only,
    padding-bottom: 15px; // not the contained elements

    .navbar-brand {
      padding-top: 0;
      padding-bottom: 0;

      img {
        max-height: 50px;
        margin: 0;
      }
    }

    .navbar-nav {
      > li {
        margin-top: -15px;  // matches container padding
        padding-top: 15px;

        &.active { background-color: $brand-primary; }
      }
    }
    #navbar-search .form-control {
      @extend .input-sm;
      max-width: 120px;
    }
  }

  .navbar-toggle {
    color: $navbar-inverse-link-color;
  }
}

/*
  as the navbar collapses on extra small screens, the navbar is thinned,
  logo shrunk, and the navbar items revert to default styles
*/
@media (max-width: $screen-sm-min) {
  body.carbon { padding-top: 75px; }

  #main-nav {
    > .content {
      padding-top: 10px;
      padding-bottom: 10px;

      .navbar-brand img {
        max-height: 30px;
        margin-top: 10px;
      }

      .navbar-nav {
        > li {
          margin-top: 0;
          padding-top: 0;

          &.active { background: $brand-primary; }
        }
      }
    }
  }
}

#main-wrap {

  > .content {
    @extend .container;
  }

  #static-wrap {
    > .content {} // static content will include its own containers

    .list-group-item .price {
      float: right;
      font-weight: 500;
    }
    .table .price {
      font-weight: 500;
    }

    .drop-cap {
      float: left;
      margin-right: 15px;
      margin-bottom: -5px;
      font-size: 3em;
      font-weight: 500;
      line-height: 1;
      letter-spacing: -0.2em;
    }

    .carousel {
      margin-bottom: 40px;

      .carousel-inner {
        .item {
          min-height: 250px;
          max-height: 400px;

          img {
            display: block;
            width: 100%;
          }
          .carousel-caption {
            padding: 10px 10px 40px;
            border-radius: 10px;
            background-color: rgba(0,0,0,0.5);
          }
        }
      }
    }
  }

  #search-panel-wrap {
    > .content {
      @extend .container;
    }
  }
}

.footer {
  @include gradient-vertical(#f0f0f0, #c8c8c8);
  font-size: 0.8em;
  font-weight: 500;

  > .content {
    @extend .container;
  }
}
