/*
 * Theme specific styles
 */

$navbar-default-bg: #fff;
$navbar-default-color: #959595;
$brand-primary: #ee2821;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body {
  overflow-y: scroll;
  padding-top: 50px;
}

#main-nav {
  @include box-shadow(0 0 10px 0 #343434);

  > .content {
    @extend .container;
  }
}

@media (max-width: $screen-sm-min) {
  .products, .product-detail { padding-top: 30px; }
}

#static-wrap {
  .container {
    margin-top: 20px;

    > .page-header { margin-top: 0; }
  }

  .product.snippet {
    @extend .thumbnail;
    display: block;
    position: relative;
    padding: 10px;
    border-radius: $border-radius-base;

    &:hover {
      @include box-shadow(0 0 1px 2px $brand-primary);
      text-decoration: none;
    }
    .product-image img { @extend .img-responsive; }
    .product-content {
      text-align: center;

      h3 {
        margin-top: 10px;
        margin-bottom: 10px;
        font-size: 17px;
        letter-spacing: -0.01em;

        .small {
          display: block;
          font-size: 14px;
        }
      }
      .product-description { display: none; }
      .promotion { text-align: center; }
    }
    .product-price {
      text-align: center;

      p {
        @extend .label, .label-primary;
        display: inline-block;
        margin-bottom: 0;
      }
    }
  }
}

#category-banner-wrap { display: none; }

#store-wrap {
  padding-bottom: 30px;
}

#categories-wrap {
  position: relative;
  background-color: #343434;

  .categories {
    @extend .container;

    > ul {
      @extend .clearfix;
      list-style: none;
      padding: 15px 0;
      margin: 0;
      font-size: $font-size-small;

      > li.category {
        float: left;
        padding: 5px 0;
        margin-right: $grid-gutter-width;

        &.active {
          > a {
            color: #fff;
            border-bottom-color: $brand-primary;
          }
          > .subcategories-wrap { display: block; }
        }

        > a {
          display: block;
          padding: 0;
          text-align: left;
          text-decoration: none;
          color: #b6b6b6;
          font-weight: 500;
          text-transform: uppercase;
          border-bottom: 2px solid transparent;

          &:hover { color: #eee; }

          img { display: none; }
          p { margin: 0; }
        }

        .subcategories-wrap {
          display: none;
          position: absolute;
          left: 0;
          right: 0;
          bottom: 0;
          background-color: #fff;

          > .subcategories {
            @extend .container;
            padding-top: 5px;
            padding-bottom: 5px;

            > ul {
              @extend .nav, .nav-pills;

              > li {
                img { display: none; }
                p { margin: 0; }
              }
            }
          }
        }
      }
    }
  }
}

#search-panel-wrap {
  .search-panel {
  }
}

#products-wrap {
  position: relative;

  .products {
    @extend .container;
    position: relative;
    margin-top: 40px;

    .product-grid {
      @extend .row;

      ul {
        display: flex;
        flex-wrap: wrap;
        align-content: flex-start;
        align-items: flex-end;
        list-style: none;
        padding-left: 0;

        li.product {
          @extend .col-xs-6, .col-sm-4, .col-md-3;
          position: relative;
          transition: all 0.2s ease-in-out 0s;

          a {
            @extend .thumbnail;
            display: block;
            padding: 10px 10px 40px;
            background-color: #fff;
            border-radius: $border-radius-base;

            &:hover {
              @include box-shadow(0 0 1px 2px $brand-primary);
              text-decoration: none;
            }
            .product-image {
              position: relative;
              overflow: hidden;
              width: 100%;
              height: 0;
              padding-bottom: 100%;

              img {
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%,-50%);
              }
            }
            .product-text {
              overflow: hidden;
              text-align: center;

              h3 {
                margin-top: 10px;
                margin-bottom: 10px;
                font-size: 17px;
                letter-spacing: -0.01em;

                .small {
                  display: block;
                  font-size: 14px;
                }
              }
              .description { display: none; }
            }
            .promotion { text-align: center; }
          }
          .buy-now {
            position: absolute;
            bottom: 30px;
            left: 25px;
            right: 25px;
            display: flex;
            justify-content: center;

            form {
              flex: 0 0 auto;

              button {
                @extend .btn-default;
                @include border-left-radius(0);
                height: 30px;
                margin-left: -2px;
                border-left-width: 0;
                border-color: $brand-primary;
              }
            }
            p {
              @extend .label, .label-primary;
              flex: 0 0 auto;
              font-size: 1em;
              line-height: 23px;
              margin-bottom: 0;
            }
          }
        }
      }
    }
  }
}

#product-detail-wrap {
  .product-detail {
    @extend .container;
    position: relative;
    padding-top: 30px;
    padding-bottom: 30px;

    .product-header {
      .actions {
        @extend .pull-right;

        .btn { display: inline-block; }
      }
      .product-title {
        margin-top: 0;
        margin-bottom: 20px;
        font-weight: 500;
      }
    }
    .product-body {
      @extend .row;

      .images.presentational {
        @extend .col-xs-12, .col-sm-7, .col-md-8, .col-lg-9;
        margin-bottom: 30px;
      }
      .product-meta {
        @extend .col-xs-12, .col-sm-5, .col-md-4, .col-lg-3;

        .product-code {
          font-size: $font-size-small;
        }
        .buy-now {
          @extend .well;

          .product-pricing {
            .price {
              @extend .lead, .text-primary;
              margin-right: 0.5em;
              margin-bottom: 0;
              font-weight: 500;

              .tax-rate, .unit-price {
                @extend .text-muted;
                display: inline-block;
                font-size: $font-size-base;
                font-weight: 400;
              }
              .tax-rate { margin-left: 0.5em; }
              .unit-price { display: block; }
            }
            .retail-price {
              text-decoration: line-through;
            }
          }
          form {
            .form-group {
              margin-top: 20px;

              button {
                @extend .btn-block, .btn-lg, .btn-success;
                transition: all 0.2s ease-in-out 0s;
              }
            }
          }
          .go-checkout .btn {
            @extend .btn-block, .btn-lg;
            transition: all 0.2s ease-in-out 0s;
          }
        }
        .variant-products {
          margin-bottom: 20px;

          button { @extend .btn-block; }
          .dropdown-menu {
            @extend .dropdown-menu-right;
          }
        }
        .product-stock {
          ul {
            font-size: $font-size-small;

            > li > span { @extend .badge; }
          }
        }
      }
      .product-description {
        @extend .col-xs-12, .col-sm-12, .col-md-6, .col-lg-6;

        .body-text { margin-bottom: 20px; }
      }
      .product-properties {
        @extend .col-xs-12, .col-sm-6, .col-md-3, .col-lg-3;

        .properties, .components {
          tr > :last-child { padding-right: 10px; }
        }
      }
      .images.technical {
        @extend .col-xs-12, .col-sm-6, .col-md-3, .col-lg-3;

        .image { padding-bottom: 100%; }
      }
      .iframes {}
      .images {
        .nav { @extend .nav-tabs, .nav-sm; }
        .image {
          position: relative;
          height: 0;
          padding-bottom: 61.8%; // golden ratio

          > a.image-link {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;

            img {
              display: block;
              max-width: 100%;
              max-height: 100%;
              width: auto;
              height: auto;
              margin: 0 auto;
            }
          }
        }
      }
    }
    .product-footer {

      .requisite-products, .variant-products {
        @extend .row;

        ul {
          list-style: none;
          padding: 0;

          li.product {
            @extend .col-xs-6, .col-sm-4, .col-md-2;

            a {
              display: block;
              text-decoration: none;

              .product-image {
                position: relative;
                height: 0;
                padding-bottom: 100%;

                img {
                  @extend .img-contain, .img-center;
                }
              }

              .product-text {
                h3 {
                  font-size: $font-size-base;
                  margin-top: 0.25em;
                  margin-bottom: 0.5em;

                  .small {
                    display: block;
                    font-size: $font-size-small;
                  }
                }
              }
              .properties {
                font-size: $font-size-small;

                th { padding-left: 0; }
                td { padding-right: 0; }
              }
            }
          }
        }
      }
    }
  }
}

.footer {
  background-color: #e3dfd7;

  > .content {
    @extend .container;
  }
}

@media print {
  #products-wrap {
    .products {
      .product-grid {
        margin: 0;
        padding: 0;

        ul {
          display: block;

          li.product {
            display: block;
            width: 100%;
            max-width: 100%;
            padding: 10px 0;
            border-top: 1px solid #eee;
            page-break-inside: avoid;
            break-inside: avoid;

            &:first-child { border-top: 0; }

            a {
              display: block;
              padding: 0;
              border: 0;

              &:after {
                content: '';
                display: table;
                clear: both;
              }

              .product-image {
                float: left;
                width: 200px;
                height: 200px;
                padding: 0;

                img {
                  position: static;
                  display: block;
                  transform: none;
                  margin: 0 auto;
                }
              }
              .product-text {
                margin-left: 220px;
                text-align: left;

                .description { display: block; }
              }
              .promotion { display: none; }
            }
            .buy-now { display: none; }
          }
        }
      }
    }
  }
}
