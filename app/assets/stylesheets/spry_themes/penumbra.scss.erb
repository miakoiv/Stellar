/*
 * Theme specific styles
 */

$navbar-inverse-bg: #373737;
$navbar-inverse-color: #888;
$navbar-inverse-link-color: #aaa;
$navbar-inverse-toggle-hover-bg: #fff;
$navbar-inverse-toggle-border-color: #888;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body {
  padding-top: 50px;

  > nav.navbar {
    @extend .navbar-inverse;
    @include box-shadow(0 1px 10px 0 rgba(0,0,0,.666));

    .navbar-toggle {
      color: $navbar-inverse-link-color;
    }
  }
}

#main {
  padding-bottom: 0;
  background: transparent;
}

.penumbra {
  overflow-y: scroll;
  background-image: url(<%= asset_path('bokeh-3.jpg') %>);
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;

  .container {
    margin-left: 0;
    margin-right: 0;
    padding-left: $grid-gutter-width;
    padding-right: $grid-gutter-width;
    width: auto;
  }

  .page-content {
    padding-top: 30px;

    img { @extend .img-responsive; }
  }

  ul.categories {
    @extend .row;
    @include gradient-vertical(rgba(255,255,255,1), rgba(255,255,255,0.7));
    margin-left: -1*$grid-gutter-width;
    margin-right: -1*$grid-gutter-width;
    list-style: none;
    margin-bottom: 0;
    padding: 0 $grid-gutter-width;

    li.category {
      float: left;
      position: relative;
      z-index: 890;
      width: 12vw;
      min-width: 150px;
      max-width: 200px;

      &.active {
        z-index: 900;

        a {
          @include box-shadow(0 0 8px 0 rgba(0,0,0,0.5));
        }
      }
      a {
        display: block;
        padding: 10px;
        text-decoration: none;
        color: #1c1c1c;
        background-color: #fff;
        transition: all 0.2s ease-in-out 0s;

        &:hover {
          background: transparent;
        }

        img { @extend .img-responsive; }
        p {
          margin: 0.5em 0 0;
          font-size: $font-size-small;
          white-space: nowrap;
        }
      }
    }
  }

  ul.products {
    @extend .row;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    position: relative;
    list-style: none;
    padding: 30px 0;

    li.product {
      position: relative;
      width: 220px;
      padding: 15px;
      margin-left: 15px;
      margin-bottom: 15px;
      background-color: #fff;
      transition: all 0.2s ease-in-out 0s;

      &:hover {
        @include box-shadow(0 0 5px 0 rgba(0,0,0,0.333));
        @include gradient-directional(rgba(250,250,250,1), rgba(255,255,255,0), 135deg);
      }
      a {
        display: block;
        padding-bottom: 95px;

        &:hover { text-decoration: none; }
        .product-image {
          position: relative;

          img {
            display: block;
            margin: 0 auto;
          }
        }
        .product-text {
          text-align: center;
          color: #5f5f5f;

          h3 {
            margin-top: 15px;
            margin-bottom: 5px;
            font-size: $font-size-large;
            text-transform: uppercase;
          }
          .description {
            position: relative;
            max-height: 80px;
            overflow: hidden;
            font-size: $font-size-small;

            &:after {
              @include gradient-vertical(rgba(255,255,255,0), rgba(255,255,255,1));
              content: "";
              position: absolute;
              left: 0;
              right: 0;
              bottom: 0;
              height: 30px;
            }
          }
        }
      }
      .buy-now {
        position: absolute;
        bottom: 15px;
        left: 0;
        right: 0;
        text-align: center;

        p {
          @extend .lead;
          color: #5f5f5f;
        }
        form {
          button {
            @extend .btn-primary;
            width: 50%;
            transition: all 0.2s ease-in-out 0s;
          }
        }
      }
    }
  }

  .product-detail {
    position: relative;
    margin: 0 -1*$grid-gutter-width;
    padding: 30px $grid-gutter-width;
    background-color: rgba(255,255,255,0.75);

    .product-header {
      @extend .row;

      .product-title {
        @extend .col-xs-12;
        margin-top: 40px;
        margin-bottom: 20px;
        font-weight: 500;
        text-transform: uppercase;
      }
      .product-meta {
        position: absolute;
        top: 30px;
        left: 30px;
        right: 30px;

        .product-actions {
          float: right;

          .form-inline, .btn {
            display: inline-block;
            transition: all 0.2s ease-in-out 0s;
          }
        }
        .product-pricing {
          float: right;
          margin: 0 15px;
          font-weight: 500;
          font-size: $font-size-large;
          line-height: 34px;
        }
      }
    }
    .product-body {
      @extend .row;

      .product-description {
        @extend .col-xs-12, .col-md-4;

        .product-code {
          @extend .pull-left;
          font-size: $font-size-small;
        }
        .product-stock {
          @extend .pull-right, .clearfix;
        }
        .body-text { clear: both; }
        .list-group { margin-top: 20px; }
      }
      .images {
        padding-bottom: 70px;

        .nav {
          @extend .hidden-print;
          position: absolute;
          left: $grid-gutter-width/2;
          bottom: 20px;

          > li > a { padding: 5px; }
        }
        .image {
          a {
            display: block;

            img {
              @extend .img-responsive;
              margin: 0 auto;
            }
          }
        }
        &.technical {
          @extend .col-xs-12, .col-sm-4, .col-md-3;
        }
        &.presentational {
          @extend .col-xs-12, .col-sm-8, .col-md-5;
        }
      }
    }
  }
}
