/*
 * Theme specific styles
 */

$navbar-height: 60px;
$navbar-default-bg: #fff;
$navbar-default-color: #959595;
$brand-primary: #013183;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body {
  overflow-y: scroll;
  padding-top: 60px;
}

#main-nav {
  @include box-shadow(0 3px 6px 0 rgba(0,0,0,0.333));

  > .content {
    @extend .container;

    .navbar-brand {
      padding-top: 13px;
      padding-bottom: 12px;

      img {
        max-width: none;
        max-height: 35px;
        margin: 0;
      }
    }
    #navbar-search .form-control {
      max-width: 120px;
    }
  }
}

@media (max-width: $screen-sm-min) {
  #category-banner-wrap { display: none; }
  .products, .product-detail { padding-top: 30px; }
}

#static-wrap {
  .container {
    margin-top: 20px;

    > .page-header { margin-top: 0; }
  }
}

#category-banner-wrap { display: none; }

#store-wrap {
  padding-bottom: 30px;
}

#categories-wrap {
  position: relative;
  background-image: url(<%= asset_path('birch.jpg') %>);
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;

  .categories {
    @extend .container;
    padding-top: 20px;

    > ul {
      @extend .row;
      display: flex;
      flex-wrap: wrap;
      align-content: flex-start;
      list-style: none;
      padding-left: 0;

      > li.category {
        @extend .col-xs-6, .col-sm-4, .col-md-3, .col-lg-2;
        position: static; // override position: relative set by .col-*
        max-width: 230px;
        margin-bottom: 15px;
        transition: all 0.2s ease-in-out 0s;

        &.active {
          > a {
            @include box-shadow(0 0 4px 2px rgba(0,0,0,0.8));
          }
          > .subcategories-wrap { display: block; }
        }

        &:hover, &.active {
          > a {
            p {
              background-color: rgba(80,59,34,0.95);
            }
          }
        }

        > a {
          @include box-shadow(0 0 1px 1px rgba(0,0,0,0.333));
          display: block;
          position: relative;
          text-decoration: none;

          img {
            @extend .img-responsive;
          }
          p {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            margin: 0;
            padding: 15px;
            background-color: rgba(80,59,34,0.667);
            color: #fff;
          }
        }
        .subcategories-wrap {
          display: none;
          position: absolute;
          left: 0;
          right: 0;
          bottom: 0;
          background-color: rgba(255,255,255,0.7);

          > .subcategories {
            @extend .container;
            padding-top: 5px;
            padding-bottom: 5px;

            > ul {
              @extend .nav, .nav-pills;

              > li {
                img { display: none; }
                p { margin: 0; }
              }
            }
          }
        }
      }
    }
  }
}

#search-panel-wrap {
  background-color: rgba($brand-primary, 0.33);
  .search-panel {
    @extend .container;
  }
}

#products-wrap {
  position: relative;

  .products {
    @extend .container;
    position: relative;
    margin-top: 40px;

    .product-grid {
      @extend .row;

      ul {
        display: flex;
        flex-wrap: wrap;
        align-content: flex-start;
        align-items: flex-end;
        list-style: none;
        padding-left: 0;

        li.product {
          @extend .col-xs-6, .col-sm-4, .col-md-3;
          position: relative;
          transition: all 0.2s ease-in-out 0s;

          a {
            @extend .thumbnail;
            @include box-shadow(0 0 1px 0 rgba(0,0,0,0.333));
            display: block;
            padding: 0;
            border: 0;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
            background-color: #fff;

            &:hover {
              @include box-shadow(0 0 1px 1px $brand-primary);
              text-decoration: none;
            }
            .product-image {
              position: relative;
              overflow: hidden;
              width: 100%;
              height: 0;
              padding-bottom: 100%;

              img {
                position: absolute;
                max-width: 100%;
                max-height: 100%;
                width: auto;
                height: auto;
                left: 50%;
                top: 50%;
                transform: translate(-50%,-50%);
              }
              &:after {
                content: '';
                display: block;
                position: absolute;
                top: -6px;
                bottom: 0;
                left: -6px;
                right: -6px;
                @include box-shadow(0 0 12px rgba(0,0,0,0.15) inset);
              }
            }
            .product-text {
              padding: 10px 15px;
              color: #222;

              h3 {
                margin-top: 5px;
                margin-bottom: 5px;
                font-size: 18px;
                font-weight: 400;
                letter-spacing: -0.01em;

                .small {
                  display: block;
                  font-weight: 500;
                  text-transform: uppercase;
                  letter-spacing: 0.02em;
                }
              }
              .description { display: none; }
            }
            .promotion { display: none; }
          }
          .buy-now { display: none; }
        }
      }
    }
  }
}

#product-detail-wrap {
  .product-detail {
    @extend .container;
    position: relative;
    padding-top: 30px;
    padding-bottom: 30px;

    .product-header {
      .actions {
        @extend .pull-right;

        .btn { display: inline-block; }
      }
      .product-title {
        margin-top: 0;
        margin-bottom: 20px;
        font-weight: 500;
      }
    }
    .product-body {
      @extend .row;

      .images.presentational {
        @extend .col-xs-12, .col-sm-7, .col-md-8, .col-lg-9;
        margin-bottom: 30px;
      }
      .product-meta {
        @extend .col-xs-12, .col-sm-5, .col-md-4, .col-lg-3;

        .product-code {
          font-size: $font-size-small;
        }
        .buy-now {
          @extend .well;

          .product-pricing {
            .price {
              @extend .lead, .text-primary;
              margin-right: 0.5em;
              margin-bottom: 0;
              font-weight: 500;

              .tax-rate, .unit-price {
                @extend .text-muted;
                display: inline-block;
                font-size: $font-size-base;
                font-weight: 400;
              }
              .unit-price { display: block; }
            }
            .retail-price {
              text-decoration: line-through;
            }
          }
          form {
            .form-group {
              margin-top: 20px;

              button {
                @extend .btn-block, .btn-lg, .btn-success;
                transition: all 0.2s ease-in-out 0s;
              }
            }
          }
          .go-checkout .btn {
            @extend .btn-block, .btn-lg;
            transition: all 0.2s ease-in-out 0s;
          }
        }
        .variant-products {
          margin-bottom: 20px;

          button { @extend .btn-block; }
          .dropdown-menu {
            @extend .dropdown-menu-right;
          }
        }
        .product-stock {
          ul {
            font-size: $font-size-small;

            > li > span { @extend .badge; }
          }
        }
      }
      .product-description {
        @extend .col-xs-12, .col-sm-7, .col-md-8, .col-lg-9;

        .body-text { margin-bottom: 20px; }
      }
      .product-properties {
        .properties, .components {
          tr > :last-child { padding-right: 10px; }
        }
      }
      .images.technical {
        @extend .col-xs-12, .col-sm-5, .col-md-4, .col-lg-3;

        .image { padding-bottom: 100%; }
      }
      .iframes {
        @extend .hidden-print;
        position: absolute;
        left: -1*$grid-gutter-width;

        .iframe-toggle {
          @extend .btn-sm, .btn-primary;
          display: block;
          width: 2*$grid-gutter-width;
          font-weight: 500;
          text-align: right;
        }
      }
      .images {
        .nav { @extend .nav-tabs, .nav-sm; }
        .image {
          position: relative;
          height: 0;
          padding-bottom: 61.8%; // golden ratio

          > a.image-link {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;

            img {
              display: block;
              max-width: 100%;
              max-height: 100%;
              width: auto;
              height: auto;
              margin: 0 auto;
            }
          }
        }
      }
    }
    .product-footer {

      .requisite-products, .variant-products {
        @extend .row;

        ul {
          display: flex;
          flex-wrap: wrap;
          align-content: flex-start;
          list-style: none;
          padding: 0;

          li.product {
            @extend .col-sm-2;

            a {
              display: block;
              text-decoration: none;

              .product-image {
                position: relative;
                height: 0;
                padding-bottom: 100%;

                img {
                  @extend .img-contain, .img-center;
                }
              }

              h3 {
                font-size: $font-size-base;
                margin-top: 0.25em;
                margin-bottom: 0.5em;

                .small {
                  display: block;
                  font-size: $font-size-small;
                }
              }
            }
          }
        }
      }
    }
  }
}

.footer {
  background-image: url(<%= asset_path('birch.jpg') %>);
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;
  color: #fff;

  > .content {
    @extend .container;
  }
}

@media print {
  #categories-wrap { padding: 0 !important; }
  #search-panel-wrap { display: none; }
  #products-wrap {
    .products {
      margin-top: 0;

      .product-grid {
        margin: 0;
        padding: 0;

        ul.masonry-grid {
          display: block;
          position: static !important;
          height: auto !important;

          li.product {
            display: block;
            position: static !important;
            width: 100%;
            max-width: 100%;
            padding: 10px 0;
            border-top: 1px solid #eee;
            page-break-inside: avoid;
            break-inside: avoid;

            &:first-child { border-top: 0; }

            a {
              display: block;
              padding: 0;
              border: 0;

              &:after {
                content: '';
                display: table;
                clear: both;
              }

              .product-image {
                float: left;
                width: 200px;
                height: auto;
                padding: 0;

                img {
                  position: static;
                  display: block;
                  transform: none;
                  margin: 0 auto;
                }
              }
              .product-text {
                margin-left: 220px;
                text-align: left;

                .description { display: block; }
              }
            }
            .buy-now {
              display: block;

              .price {
                float: right;
                font-size: 12px;
              }
              form { display: none; }
            }
          }
        }
      }
    }
  }
  #product-detail-wrap {
    .product-detail {
      padding: 0;

      .product-header {
        .actions { display: none; }
        .product-title {}
      }
      .product-body {

        .images.presentational {
          float: left;
          width: 66.66% !important;

          .tab-pane:not(:first-child) { display: none; }
        }
        .product-meta {
          float: left;
          width: 33.33% !important;

          .buy-now {
            form, .go-checkout { display: none; }
          }
          .variant-products { display: none; }
        }
        .product-description {
          float: left;
          width: 50% !important;

          .body-text {}
        }
        .product-properties {
          float: left;
          width: 25% !important;

          .components { display: none; }
        }
        .images.technical {
          float: left;
          width: 25% !important;

          .tab-pane:not(:first-child) { display: none; }
        }
        .images {
          .nav { display: none; }
        }
      }
      .product-footer { display: none; }
    }
  }
}
