/*
 * Theme specific styles
 */

$brand-primary: #29abe2;
$navbar-inverse-bg: #2d2d2d;
$navbar-inverse-color: #cdcdcd;
$navbar-inverse-link-color: #cdcdcd;
$navbar-inverse-toggle-hover-bg: #29abe2;
$navbar-inverse-toggle-border-color: #cdcdcd;

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

body {
  padding-top: 70px;

  > nav.navbar {
    @extend .navbar-inverse;
    @include box-shadow(0 1px 10px 0 rgba(0,0,0,.333));

    > .container {
      .navbar-brand {
        height: 70px;
        padding: 25px;
        margin-left: 0;
        background-color: #252525;
      }
      .navbar-nav > li > a {
        padding-top: 34px;
        padding-bottom: 16px;
        text-transform: uppercase;
        font-size: $font-size-small;
      }
      .navbar-form {
        margin-top: 28px;
      }
      .navbar-toggle {
        color: #cdcdcd;
      }
    }
  }
}

#main {
  padding-bottom: 0;
  background: transparent;
}

.compass {
  overflow-y: scroll;
  background-color: #e0e0e0;

  .container {
    margin-left: 0;
    margin-right: 0;
    padding-left: $grid-gutter-width;
    padding-right: $grid-gutter-width;
    width: auto;
  }

  .page-content {
    padding-top: 30px;
  }

  .search-panel {
    margin-bottom: 30px;
  }

  .categories {
    @extend .row;
    margin-left: -1*$grid-gutter-width;
    margin-right: -1*$grid-gutter-width;
    background-color: #d0d0d0;

    ul {
      list-style: none;
      margin: 0;
      padding: 0 $grid-gutter-width;

      li.category {
        float: left;
        position: relative;
        width: 12.5vw;
        min-width: 120px;

        a {
          display: block;
          text-decoration: none;
          background-color: #c4c4c4;
          color: #1c1c1c;
          transition: all 0.2s ease-in-out 0s;

          &:hover {
            background-color: #fff;
          }

          img { display: none; }
          p {
            margin: 0;
            padding: 10px 15px;
            white-space: nowrap;
          }
        }
      }
    }
    .subcategories {
      ul {
        li {
          button {
            display: block;
            padding: 10px 0;
          }
        }
      }
    }
  }

  .products {
    @extend .row;
    position: relative;
    margin-top: 30px;
    margin-bottom: 30px;

    ul {
      list-style: none;
      margin: 0;
      padding: 0;

      li.product {
        float: left;
        width: 220px;
        padding: 15px;
        margin-left: 15px;
        margin-bottom: 15px;
        background-color: #fff;
        transition: all 0.2s ease-in-out 0s;

        &:hover {
          @include box-shadow(0 0 5px 0 rgba(0,0,0,0.333));
          @include gradient-directional(rgba(250,250,250,1), rgba(255,255,255,0), 135deg);
        }
        a {
          display: block;

          &:hover { text-decoration: none; }
          .product-image {
            position: relative;

            img {
              display: block;
              margin: 0 auto;
            }
          }
          .product-text {
            text-align: center;
            color: #5f5f5f;

            h3 {
              margin-top: 15px;
              margin-bottom: 5px;
              font-size: $font-size-large;
              text-transform: uppercase;
            }
            .description {
              position: relative;
              max-height: 80px;
              overflow: hidden;
              font-size: $font-size-small;

              &:after {
                @include gradient-vertical(rgba(255,255,255,0), rgba(255,255,255,1));
                content: "";
                position: absolute;
                left: 0;
                right: 0;
                bottom: 0;
                height: 30px;
              }
            }
          }
        }
        .buy-now {
          margin-top: 15px;
          text-align: center;

          p {
            @extend .lead;
            color: #5f5f5f;
          }
          form {
            button {
              width: 50%;
              background-color: #343434;
              border-color: #000;
              transition: all 0.2s ease-in-out 0s;

              &:hover {
                background-color: $brand-primary;
                border-color: $link-color;
              }
            }
          }
        }
      }
    }
    .product-list {
      @extend .col-xs-12;
    }
  }

  .product-detail {
    position: relative;
    margin: -40px -1*$grid-gutter-width 0;
    padding: 0 $grid-gutter-width 220px;
    background: #1c1c1c;
    color: #b8b8b8;

    .product-header {
      @extend .row;
      color: #ddd;

      .product-title {
        @extend .col-xs-12;
        margin-top: 0;
        margin-bottom: 30px;
        padding-top: 60px;
        font-weight: 500;
        text-transform: uppercase;

        .small {
          position: absolute;
          top: 40px;
          left: $grid-gutter-width/2;
          font-size: $font-size-small;
        }
      }
      .product-meta {
        position: absolute;
        top: 30px;
        left: 30px;
        right: 30px;

        .product-actions {
          float: right;

          .form-inline, .btn { display: inline-block; }
          .form-inline .form-group { margin: 0; }
          .btn {
            @extend .btn-default;
            color: #ddd;
            background: transparent;
            transition: all 0.2s ease-in-out 0s;

            &:hover {
              background-color: $brand-primary;
              border-color: $link-color;
              color: #fff;
            }
          }
        }
        .product-pricing {

          .price, .retail-price {
            float: right;
            margin-right: $grid-gutter-width/2;
            font-size: $font-size-large;
            line-height: 34px;

            .unit-price {
              display: block;
              margin-top: -10px;
              font-size: $font-size-small;
            }
          }
          .price {
            color: #fff;
            font-weight: 500;
          }
          .retail-price {
            opacity: 0.5;
            text-decoration: line-through;
          }
        }
      }
    }
    .product-body {
      @extend .row;

      .product-description {
        @extend .col-xs-12, .col-md-3;

        .product-code {
          @extend .pull-left;
          font-size: $font-size-small;
        }
        .product-stock {
          @extend .pull-right, .clearfix;
        }
        .body-text { clear: both; }
        .list-group {
          margin-top: 20px;

          .list-group-item {
            background: transparent;
            color: inherit;

            &:hover { color: #fff; }
          }
        }
        .table { margin-top: 20px; }
      }
      .iframes {
        @extend .col-xs-12, .col-md-4;

        iframe {
          width: 100%;
          height: 640px;
        }
      }
      .images {
        padding-bottom: 50px;

        .nav {
          @extend .hidden-print;
          position: absolute;
          left: $grid-gutter-width/2;
          bottom: 0;

          > li > a { padding: 5px; }
        }
        .image {
          a {
            display: block;

            img {
              @extend .img-responsive;
              margin: 0 auto;
            }
          }
        }
        &.presentational {
          @extend .col-xs-12, .col-md-5;
        }
        &.technical {
          position: absolute;
          left: 0;
          bottom: 0;
          height: 200px;
          width: 100%;
          overflow-y: hidden;
          overflow-x: auto;
          padding: 0 $grid-gutter-width/2;
          background: #e0e0e0;
          @include box-shadow(inset 0 15px 10px -10px rgba(0,0,0,0.333));

          .nav { display: none; }
          .gallery {
            display: table;

            .image {
              display: table-cell;
              padding: 15px;
              img { max-height: 170px; }
              &.fade { opacity: 1; }
            }
          }
        }
      }
    }
  }
}

.footer {
  background: darken($brand-primary, 35%);
  color: $brand-primary;
}
