/*
 * Theme specific styles
 */

$brand-primary: #b0c7c6;
$brand-secondary: #b9d6de;
$off-white: #fbffff;
$body-bg: #fff;
$footer-bg: #fff;

$font-size-base: 16px;
$font-family-serif: 'Droid Serif', serif;

$navbar-inverse-color: $off-white;
$navbar-inverse-border: transparent;
$navbar-inverse-link-color: $off-white;
$navbar-inverse-link-hover-color: #fff;
$navbar-inverse-link-active-color: #fff;
$navmenu-inverse-color: $off-white;
$navmenu-inverse-link-color: $off-white;
$navmenu-inverse-link-active-color: #fff;

@import "bootstrap-font-awesome";
@import "bootstrap-generators";
@import "bootstrap-tweaks";
@import "fonts";
@import "print";

@include bg-variant('.bg-primary', $brand-primary);

/*
 * Extra tall navbar
 */
#main-nav {
  @extend .navbar-inverse;
  position: absolute;
  width: 100% !important;
  background-color: rgba(0,0,0,0);
}
#main-nav .container {
  padding-top: 30px;    // padding the container only,
  padding-bottom: 30px; // not the contained elements
}
#main-nav .navbar-brand {
  padding-top: 0;
  padding-bottom: 0;

  img { max-height: 50px; }
}

/* Sticky kit sticks the navbar at -30px */
#main-nav.is_stuck {
  background-color: rgba(0,0,0,0.5);

  .container { padding-bottom: 0; }
}


/* No main nav in this theme */
#main-nav .navbar-nav { display: none; }

/* Keep the hamburger on desktop */
#main-nav .offcanvas-toggle {
  @extend .btn-lg;
  display: block !important;
}

/* Inverse side nav */
#side-nav {
  @extend .navmenu-inverse;
  z-index: 1040;
  font-size: 13px;
}

/* Push content below the navbar */
#content-wrap { padding-top: 110px; }


/*
 * Rounded buttons all over
 */
#static-wrap .btn,
#store-wrap .btn {
  @extend .btn-round;
}


/* Masthead extends underneath the navbar */
#masthead {
  display: flex;
  flex-direction: column;
  margin-top: -110px;
  height: 1000px;
}

/* Content sections */
.section {
  position: relative;
  padding-top: 60px;
  padding-bottom: 60px;
}
.section-masthead {
  margin-top: -110px;
  padding-top: 170px;
}
.section-primary {
  background-color: $brand-primary;
  color: #fff;
}
.section-secondary {
  background-color: lighten($brand-primary, 17%);
}
.section h2 { margin-bottom: 40px; }


/*
 * Content elements
 */

/* Thumbnails with various aspect ratios */
.thumbnail {
  position: relative;
  padding: 0;
  border: 0;
  border-radius: 0;
}
.thumbnail.three-by-two {
  height: 0;
  padding-bottom: 66.7%;
}
.thumbnail.square {
  height: 0;
  padding-bottom: 100%;
}
/* Thumbnail content takes up all available space */
.thumbnail .thumbnail-content {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 5%;
}
.center-content {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Background image */
.bg-image {
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
}
.bg-image .text-shadow { text-shadow: 0 0 6px rgba(0,0,0,0.8); }

.gradient-overlay:before {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  @include gradient-vertical(rgba(0,0,0,0.8), rgba(0,0,0,0), 0%, 50%);
}
/* Translucent container */
.bg-translucent {
  padding: 20px 40px 40px;
  background-color: rgba(255,255,255,0.8);
}


/*
 * Typography
 */
p, address {
  font-family: $font-family-serif;
}
.larger { font-size: 1.1em; }
.extra-bold {
  font-family: Montserrat, sans-serif;
  font-weight: 500;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}
.text-white { color: #fff; }
.text-shadow { text-shadow: 0 0 6px rgba(0,0,0,0.2); }
.box-shadow { box-shadow: 0 0 6px rgba(0,0,0,0.2); }

ul, ol { padding-left: 1em; }
ul { list-style-type: square; }

.drop-cap {
  float: left;
  margin-right: 15px;
  margin-bottom: -5px;
  font-size: 3em;
  font-weight: 500;
  line-height: 1;
  letter-spacing: -0.2em;
}

.correspondence-form .form-control {
  border-color: transparent !important;
  border-radius: 0;
}

#categories-wrap {
  background-color: #ccc;

  .categories {
    > ul {
      list-style: none;
      padding-left: 0;
      display: flex;
      flex-flow: row wrap;

      > li.category {
        @extend .col-xs-6, .col-sm-3;
        position: static;
        flex: 0 1 auto;
        padding: 0;

        &.active a::after {
          content: '';
          display: block;
          position: absolute;
          left: 0;
          right: 0;
          top: 0;
          bottom: 0;
          @include gradient-vertical(rgba(255,255,255,0.75), rgba(255,255,255,0), 0%, 50%);
        }

        > a:hover img {
          transform: translate(-50%, -50%) scale(1.2);
        }

        > a {
          position: relative;
          display: block;
          height: 0;
          padding-bottom: 50%;
          overflow: hidden;

          img {
            position: absolute;
            display: block;
            width: auto;
            height: 100%;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            transition: all 0.8s ease-in-out 0s;
          }
          p {
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            margin: 0;
            padding: 5px;
            font-size: $font-size-small;
            font-weight: 500;
            background-color: rgba(0,0,0,0.666);
            color: #fff;
          }
        }
        .subcategories-wrap { display: none; }
      }
    }
  }
}

#products-wrap {}

#product-detail-wrap {}

.footer {
  font-size: 0.8em;
  font-weight: 500;
}
.footer .navmenu {
}
