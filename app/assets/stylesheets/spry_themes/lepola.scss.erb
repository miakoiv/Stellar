/*
 * Theme specific styles
 */

$brand-primary: lighten(#1a3476, 24%);
$navbar-inverse-bg: lighten(#1a3476, 8%);
$navbar-inverse-color: lighten(#1a3476, 45%);
$navbar-inverse-link-color: lighten(#1a3476, 55%);

@import "bootstrap-font-awesome.scss";
@import "bootstrap-generators.scss";
@import "bootstrap-tweaks.scss";
@import "fonts.scss";
@import "print.scss";

.lepola {
  overflow-y: scroll;
  background-color: lighten(#fab20b, 46%);
  background-image: url(<%= asset_path('lepola-bg.svg') %>);
  background-position: bottom left;
  background-repeat: no-repeat;
  background-size: 1000px 1000px;

  #main { background: transparent; }
  #main-nav { @extend .navbar-inverse; }

  .container {
    padding-left: $grid-gutter-width;
    padding-right: $grid-gutter-width;
    width: auto;
  }

  .page-content {
    padding-top: 30px;
  }

  .categories {
    z-index: $zindex-navbar;
    position: fixed;
    left: 0;
    right: 0;
    top: $navbar-height;
    padding: 5px -9+$grid-gutter-width;
    font-size: $font-size-small;
    background: #fff;
    border-bottom: 1px solid $brand-primary;

    ul {
      @extend .nav, .nav-pills;

      li.category {
        a {
          border-radius: 18px;

          img { display: none; }
          p { margin: 0; }
        }
      }
    }
  }

  .products {
    position: relative;

    ul {
      list-style: none;
      margin: 0;
      padding: 0;

      li.product {
        @extend .img-thumbnail;
        width: 180px;
        padding: 10px;
        margin: 0 10px 10px 0;
        background: #fff;
        border-radius: $border-radius-base;

        &:hover {
          @include box-shadow(0 0 8px $link-color);
          a { text-decoration: none; }
        }
        h3 {
          margin: 0.5em 0 0;
          font-size: $font-size-base;

          .small {
            display: block;
            font-size: $font-size-small;
          }
        }
        .description, .buy-now { display: none; }
      }
    }
  }

  .product-detail {

    .product-header {
      @extend .row;
      margin-top: 20px;
      margin-bottom: 20px;

      .product-title {
        @extend .col-xs-12;
        @extend .col-md-7;
        margin: 0;
      }
      .product-meta {
        @extend .col-xs-12;
        @extend .col-md-5;
        margin-top: 8px;

        .product-actions {
          float: right;

          .form-inline, .btn { display: inline-block; }
        }
        .product-pricing {

          .price, .retail-price {
            float: right;
            margin-right: $grid-gutter-width/2;
            font-size: $font-size-large;
            line-height: 34px;

            .unit-price {
              display: block;
              margin-top: -10px;
              font-size: $font-size-small;
              text-align: right;
            }
          }
          .price {
            @extend .text-primary;
            font-weight: 500;
          }
          .retail-price {
            opacity: 0.5;
            text-decoration: line-through;
          }
        }
      }
    }
    .product-body {
      @extend .row;

      .product-description { display: none; }
      .images {
        &.technical {
          @extend .col-sm-4;
          @extend .col-sm-push-8;
        }
        &.presentational {
          @extend .col-sm-8;
          @extend .col-sm-pull-4;
        }
        .nav { display: none; }
        .tab-content {
          .image {
            a {
              display: block;

              img {
                @extend .img-responsive;

                &:hover {
                  @include box-shadow(0 0 8px $link-color);
                }
              }
            }
            &:not(:first-child) { @extend .hidden-print; }
          }
        }
      }
    }
  }
}

.footer {
  background: $navbar-inverse-bg;
  color: $navbar-inverse-color;
}
