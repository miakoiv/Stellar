/*
 * Theme specific styles
 */

$brand-primary: lighten(#1a3476, 24%);
$navbar-inverse-bg: lighten(#1a3476, 8%);
$navbar-inverse-color: lighten(#1a3476, 45%);
$navbar-inverse-link-color: lighten(#1a3476, 55%);

@import "bootstrap-font-awesome";
@import "bootstrap-generators";
@import "bootstrap-tweaks";
@import "fonts";
@import "print";

body {
  overflow-y: scroll;
  padding-top: 50px;
  background-color: lighten(#fab20b, 46%);
  background-image: url(<%= asset_path('lepola-bg.svg') %>);
  background-position: bottom left;
  background-repeat: no-repeat;
  background-size: 1000px 1000px;
}

#main-nav {
  @extend .navbar-inverse;
}

#search-panel-wrap { }

#categories-wrap {
  background-color: #fff;
  border-bottom: 1px solid $brand-primary;

  .categories {
    @extend .container;
    padding: 5px 0;
    font-size: $font-size-small;

    ul {
      @extend .nav, .nav-pills;

      li.category {
        &.active {
          .subcategories-wrap { display: block; }
        }
        a {
          border-radius: 18px;

          img { display: none; }
          p { margin: 0; }
        }
        .subcategories-wrap { display: none; }
      }
    }
  }
}

#products-wrap {
  position: relative;

  #products-view-toggle {
    position: absolute;
    right: $grid-gutter-width/2;
    top: -30px;

    button {
      @extend .btn, .btn-default, .btn-xs;
    }
  }
  .products {
    @extend .container;
    position: relative;
    margin-top: 40px;

    ul {
      list-style: none;
      margin: 0;
      padding: 0;

      li.product {
        @extend .img-thumbnail;
        width: 180px;
        padding: 10px;
        margin: 0 10px 10px 0;
        background: #fff;
        border-radius: $border-radius-base;

        &:hover {
          @include box-shadow(0 0 8px $link-color);
          a { text-decoration: none; }
        }
        a {
          img { @extend .img-responsive; }
        }
        h3 {
          margin: 0.5em 0 0;
          font-size: $font-size-base;

          .small {
            display: block;
            font-size: $font-size-small;
          }
        }
        .description, .buy-now { display: none; }
      }
    }
  }
}

#product-detail-wrap {
  .product-detail {
    @extend .container;

    .product-header {
      @extend .row;
      margin-top: 20px;
      margin-bottom: 20px;

      .product-title {
        @extend .col-xs-12;
        @extend .col-md-7;
        margin: 0;
      }
      .product-meta {
        @extend .col-xs-12;
        @extend .col-md-5;
        margin-top: 8px;

        .product-actions {
          float: right;

          .form-inline, .btn { display: inline-block; }
        }
        .product-pricing {

          .price, .retail-price {
            float: right;
            margin-right: $grid-gutter-width/2;
            font-size: $font-size-large;
            line-height: 34px;

            .tax-rate {
              margin-left: 5px;
              color: $text-color;
              font-size: $font-size-small;
              letter-spacing: 0.05em;
              word-spacing: 0;
            }
            .unit-price {
              display: block;
              margin-top: -10px;
              font-size: $font-size-small;
              text-align: right;
            }
          }
          .price {
            @extend .text-primary;
            font-weight: 500;
          }
          .retail-price {
            opacity: 0.5;
            text-decoration: line-through;
          }
        }
      }
    }
    .product-body {
      @extend .row;

      .product-description { display: none; }
      .images {
        &.technical {
          @extend .col-sm-4;
          @extend .col-sm-push-8;
        }
        &.presentational {
          @extend .col-sm-8;
          @extend .col-sm-pull-4;
        }
        .nav { display: none; }
        .tab-content {
          .image {
            a {
              display: block;

              img {
                @extend .img-responsive;

                &:hover {
                  @include box-shadow(0 0 8px $link-color);
                }
              }
            }
            &:not(:first-child) { @extend .hidden-print; }
          }
        }
      }
    }
  }
}

.footer {
  background: $navbar-inverse-bg;
  color: $navbar-inverse-color;
}
