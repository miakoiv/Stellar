$.fn.extend
  initialize: ->

    viewportUpdate()

    $('#content-wrap').imagesLoaded ->
      new SmoothScroll '.nav > .scroll > a'
      gumshoe.init
        selector: '#main-nav .nav > .scroll > a'
        offset: 40
      $('.animation').AniView
        animateThreshold: 40

    $('.gallery', this).each ->
      $(this).magnificPopup
        delegate: '.image-link'
        type: 'image'
        gallery:
          enabled: true

    $('[data-toggle="tooltip"]', this).tooltip()
    $('[data-toggle="popover"]', this).popover
      html: true
      trigger: 'hover'

    $('.selectize', this).betterSelectize()

    $('input.color', this).minicolors
      theme: 'bootstrap'

    $('.column[data-reorder]', this).each ->
      $(this).column_sortable()

    $('.infinite-table', this).infinitePages
      loading: ->
        $('#spinner').show()

    $('.credit-card-number').payment 'formatCardNumber'
    $('.credit-card-expiry').payment 'formatCardExpiry'
    $('.credit-card-cvc').payment 'formatCardCVC'

  deactivate: ->
    $(this).removeClass 'active'
  activate: ->
    $(this).addClass 'active'
    $(this).parents('li').addClass 'active'

  make_room: (element) ->
    $(this).css 'padding-bottom', element.height()

  masonry_build: ->
    $grid = $('.staggered-grid', this)
    $grid.imagesLoaded ->
      $grid.masonry
        itemSelector: '.grid-item'
        columnWidth: '.single'
        percentPosition: true
        transitionDuration: 0
      if window.wiselinks? then Wiselinks.scrollPage()

$(document).on 'keypress', 'form.immediate .form-control', (e) ->
  if e.key is 'Enter'
    e.preventDefault()
    $(e.currentTarget).trigger 'submit.rails'

$(document).on 'change', 'form.immediate', (e) ->
  $(e.currentTarget).trigger 'submit.rails'

$(document).on 'click', '[data-toggle=sidebar]', (e) ->
  $('.sidebar').toggleClass 'active'

$(document).on 'click', 'a[href="#back"]', (e) ->
  e.preventDefault()
  history.back()

$(document).on 'click', 'a[href="#print"]', (e) ->
  e.preventDefault()
  $.print()

jQuery ->

  $(document).initialize()
  $('.products').masonry_build()

  new Clipboard('.clipboard')
